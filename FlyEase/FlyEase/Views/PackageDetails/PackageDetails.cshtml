@model FlyEase.ViewModels.BookingVM
@{
    ViewData["Title"] = Model.PackageName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/css/booking.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="~/js/packageDetails.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
}

<div class="container mt-4 mb-5">

    <!-- REVAMPED GALLERY SECTION -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="gallery-section-revamped">
                <div class="gallery-thumbnails">
                    @for (int i = 0; i < Model.AllImages.Count; i++)
                    {
                        <input class="gallery-radio" type="radio" id="gallery-@i" name="gallery" @(i == 0 ? "checked" : "") />
                        <label class="gallery-thumbnail @(i == 0 ? "active" : "")" for="gallery-@i" 
                               style="background-image: url('@Model.AllImages[i]');"
                               data-image-index="@i">
                        </label>
                    }
                </div>

                <div class="gallery-display-container">
                    <ul class="gallery-images-list">
                        @for (int i = 0; i < Model.AllImages.Count; i++)
                        {
                            <li class="gallery-main-image @(i == 0 ? "active" : "")" 
                                style="background-image: url('@Model.AllImages[i]');">
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <h1 class="fw-bold">@Model.PackageName</h1>

            <div class="mt-4 mb-4">
                <h3>Travel Date</h3>
                <p><i class="fa-regular fa-calendar me-2"></i>@Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</p>
            </div>

            <div class="mt-4 mb-4">
                <h3>Destination</h3>
                <p><i class="fa-solid fa-location-dot me-2"></i>@Model.Destination</p>
            </div>

            <div class="mt-4 mb-4">
                <h3>Description</h3>
                <p>@Model.Description</p>
            </div>

            <div class="mt-4 mb-4">
                <h3>Location Map</h3>
                <div id="bookingMap" style="height: 350px; width: 100%; border-radius: 10px; border: 1px solid #ddd; z-index: 1;"
                     data-lat="@(Model.Latitude != 0 ? Model.Latitude : 3.1390)"
                     data-lng="@(Model.Longitude != 0 ? Model.Longitude : 101.6869)"
                     data-title="@Model.PackageName"
                     data-desc="@Model.Destination">
                </div>
            </div>

            <div class="mt-4 mb-5">
                <button type="button" class="btn btn-primary w-100 py-3 fw-bold" data-bs-toggle="modal" data-bs-target="#itineraryModal">
                    <i class="fas fa-list-ol me-2"></i>See Trip Process (Itinerary)
                </button>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow border-0 p-4 sticky-top" style="top: 20px;">
                <h3 class="text-primary fw-bold">RM @Model.Price.ToString("N0")</h3>

                @* --- LOGIC: Check User Role --- *@
                @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                {
                    <div class="alert alert-warning mt-3 mb-0 text-center border-warning">
                        <i class="fas fa-user-shield fa-2x mb-2 text-warning"></i>
                        <h6 class="fw-bold">Staff Restriction</h6>
                        <p class="small mb-0">
                            Administrator and Staff accounts are not eligible to make bookings.
                            Please log in with a User account to proceed.
                        </p>
                    </div>
                }
                else
                {
                    @* --- Normal Booking Form for Users/Guests --- *@
                    <form asp-controller="Payment" asp-action="CustomerInfo" method="get" class="mt-3" id="bookingForm">
                        <input type="hidden" name="packageId" value="@Model.PackageID" />

                        <p><i class="fas fa-users me-2"></i>@Model.AvailableSlots slots available</p>
                        <p><i class="fa-solid fa-plus"></i> All Add-Ons are free of charge</p>

                        @if (Model.Inclusions.Count > 0)
                        {
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">Add-ons</label>
                                <div class="d-flex flex-column gap-2">
                                    @foreach (var item in Model.Inclusions)
                                    {
                                        <div class="selection-card">
                                            <input type="checkbox" class="btn-check option-trigger" name="selectedInclusions"
                                                   id="inc_@item.Id" value="@item.Id" autocomplete="off">

                                            <label class="btn btn-outline-light w-100 text-start p-3 d-flex align-items-center justify-content-between text-dark border" for="inc_@item.Id">
                                                <span class="fw-medium">@item.Name</span>
                                                <i class="bi bi-plus-circle text-muted check-icon-unchecked"></i>
                                                <i class="bi bi-check-circle-fill text-success check-icon-checked d-none"></i>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted small">No Add-ons listed.</p>
                        }

                        <div class="mb-3">
                            <p class="fw-bold">Guests</p>
                            <div class="input-group">
                                <input type="number" name="people" id="paxInput" class="form-control text-center" value="1" min="1" max="@Model.AvailableSlots" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold fs-5 shadow-sm"
                                onclick="return validateBookNow(event)"
                                @(Model.AvailableSlots == 0 ? "disabled" : "")>
                            <i class="fas fa-calendar-check me-1"></i>
                            @(Model.AvailableSlots > 0 ? "Book Now" : "Sold Out")
                        </button>
                    </form>
                }

                <div class="text-center mt-3">
                    <small class="text-muted"><i class="bi bi-shield-check"></i> Best Price Guarantee</small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="itineraryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Trip Itinerary: @Model.PackageName</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body bg-light">
                @if (Model.Itinerary != null && Model.Itinerary.Count > 0)
                {
                    <div class="timeline p-2">
                        @foreach (var day in Model.Itinerary)
                        {
                            <div class="card mb-3 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-primary rounded-pill me-2">Day @day.DayNumber</span>
                                        <h5 class="card-title mb-0 text-dark">@day.Title</h5>
                                    </div>
                                    <p class="card-text text-muted ms-1">@day.ActivityDescription</p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center p-4">
                        <p class="text-muted">No specific itinerary details available for this package.</p>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
