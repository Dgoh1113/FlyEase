@model FlyEase.ViewModels.DiscountsPageVM

@{
    ViewData["Title"] = "Manage Discounts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Manage Discounts</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#discountModal" onclick="clearModal()">
        <i class="fas fa-plus me-2"></i> Add New Discount
    </button>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Discount Name</th>
                        <th>Rate (%)</th>
                        <th>Fixed Amount (RM)</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Discounts.Any())
                    {
                        foreach (var item in Model.Discounts)
                        {
                            <tr>
                                <td class="ps-4">@item.DiscountTypeID</td>
                                <td class="fw-bold">@item.DiscountName</td>
                                <td>
                                    @if (item.DiscountRate.HasValue)
                                    {
                                        <span class="badge bg-info text-dark">@((item.DiscountRate.Value * 100).ToString("0.##"))%</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DiscountAmount.HasValue)
                                    {
                                        <span class="badge bg-success">RM @item.DiscountAmount.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary me-2"
                                            onclick="editDiscount(@item.DiscountTypeID, '@item.DiscountName', '@item.DiscountRate', '@item.DiscountAmount')">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="DeleteDiscount" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this discount?');">
                                        <input type="hidden" name="id" value="@item.DiscountTypeID" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-tags fa-2x mb-3"></i>
                                <p>No discounts found. Create one to get started!</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="discountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="SaveDiscount" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalTitle">Add New Discount</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="CurrentDiscount.DiscountTypeID" id="discountId" />

                    <div class="mb-3">
                        <label asp-for="CurrentDiscount.DiscountName" class="form-label">Discount Name</label>
                        <input asp-for="CurrentDiscount.DiscountName" class="form-control" id="discountName" required placeholder="e.g. Seasonal Sale" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CurrentDiscount.DiscountRate" class="form-label">Percentage Rate (0-1)</label>
                            <input asp-for="CurrentDiscount.DiscountRate" type="number" step="0.01" min="0" max="1" class="form-control" id="discountRate" placeholder="e.g. 0.10 for 10%" />
                            <small class="text-muted">Enter 0.10 for 10%</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CurrentDiscount.DiscountAmount" class="form-label">Fixed Amount (RM)</label>
                            <input asp-for="CurrentDiscount.DiscountAmount" type="number" step="0.01" min="0" class="form-control" id="discountAmount" placeholder="0.00" />
                            <small class="text-muted">Fill only one: Rate or Amount</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function editDiscount(id, name, rate, amount) {
        document.getElementById('modalTitle').innerText = 'Edit Discount';
        document.getElementById('discountId').value = id;
        document.getElementById('discountName').value = name;
        document.getElementById('discountRate').value = rate;
        document.getElementById('discountAmount').value = amount;

        var myModal = new bootstrap.Modal(document.getElementById('discountModal'));
        myModal.show();
    }

    function clearModal() {
        document.getElementById('modalTitle').innerText = 'Add New Discount';
        document.getElementById('discountId').value = 0;
        document.getElementById('discountName').value = '';
        document.getElementById('discountRate').value = '';
        document.getElementById('discountAmount').value = '';
    }
</script>