@model FlyEase.ViewModels.AdminDashboardVM
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --white: #fff;
        --blue: #4b84fe;
        --colorDark: #1b253d;
        --colorLight: #99a0b0;
        --red: #fa5b67;
        --yellow: #ffbb09;
        --bg: #f5f5fa;
        --bgDark: #ede8f0;
    }

    .dashboard-quick-view {
        font-family: 'Open Sans', Helvetica, sans-serif;
        color: var(--colorLight);
        background: var(--bg);
        padding: 2rem;
        border-radius: 8px;
    }

    .dashboard-header {
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--bgDark);
        padding-bottom: 1rem;
    }

        .dashboard-header h1 {
            font-size: 1.5em;
            color: var(--colorDark);
            font-weight: 600;
            margin: 0;
        }

        .dashboard-header p {
            margin: 0.5rem 0 0;
            color: var(--colorLight);
        }

    /* Grid Layout for the 6 Buttons */
    .info-boxes {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        grid-gap: 2em;
        padding: 1em 0;
    }

    /* The Card Design */
    .info-box {
        background: var(--white);
        height: 160px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 0 3em;
        border: 1px solid var(--bgDark);
        border-radius: 5px;
        text-decoration: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .info-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(27, 37, 61, 0.1);
            border-color: var(--blue);
        }

    /* Icon styling */
    .box-icon {
        flex-shrink: 0;
        width: 60px;
        display: flex;
        justify-content: center;
    }

        /* Font Awesome Icon Styling */
        .box-icon i {
            display: block;
            font-size: 3rem; /* Larger font size */
            color: var(--colorLight);
            transition: color 0.2s ease;
        }

    .info-box:hover .box-icon i {
        color: var(--blue);
    }

    /* Content Styling */
    .box-content {
        padding-left: 1.25em;
        white-space: nowrap;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .box-content .big {
            display: block;
            font-size: 2em;
            line-height: 120%;
            color: var(--colorDark);
            font-weight: 700;
        }

        .box-content span.label {
            font-size: 1em;
            color: var(--colorLight);
            font-weight: 600;
        }
</style>

<div class="dashboard-quick-view">
    <header class="dashboard-header">
        <h1>Overview</h1>
        <p>Quick access to system management and reports.</p>
    </header>

    <div class="info-boxes">
        <a asp-controller="AdminDashboard" asp-action="Bookings" class="info-box">
            <div class="box-icon">
                <i class="fas fa-ticket-alt"></i>
            </div>
            <div class="box-content">
                <span class="big">@Model.TotalBookings</span>
                <span class="label">Bookings</span>
            </div>
        </a>

        <a asp-controller="AdminDashboard" asp-action="Packages" class="info-box">
            <div class="box-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="box-content">
                <span class="big">@Model.LowStockPackages.Count</span>
                <span class="label">Low Stock Packages</span>
            </div>
        </a>

        <a asp-controller="AdminDashboard" asp-action="Users" class="info-box">
            <div class="box-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="box-content">
                <span class="big">@Model.TotalUsers</span>
                <span class="label">Users</span>
            </div>
        </a>

        <a asp-controller="AdminDashboard" asp-action="Discounts" class="info-box">
            <div class="box-icon">
                <i class="fas fa-tags"></i>
            </div>
            <div class="box-content">
                <span class="big">Manage</span>
                <span class="label">Discounts</span>
            </div>
        </a>

        <a asp-controller="Report" asp-action="SalesReport" class="info-box">
            <div class="box-icon">
                <i class="fa-regular fa-chart-bar"></i>
            </div>
            <div class="box-content">
                <span class="big">RM @Model.TotalRevenue.ToString("N0")</span>
                <span class="label">Revenue</span>
            </div>
        </a>

        <a asp-controller="AdminDashboard" asp-action="Analytics" class="info-box">
            <div class="box-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="box-content">
                <span class="big">View</span>
                <span class="label">Analysis</span>
            </div>
        </a>
    </div>
</div>