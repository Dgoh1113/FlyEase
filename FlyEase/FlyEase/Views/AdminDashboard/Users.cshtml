@using X.PagedList
@using X.PagedList.Mvc.Core
@model FlyEase.ViewModels.UsersPageVM

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/admindashboarduser.css" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold"><i class="fas fa-users me-2"></i>User Management</h2>
    <button class="btn btn-primary" onclick="openUserModal()">
        <i class="fas fa-plus me-2"></i>Add User
    </button>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body py-3">
        <form method="get" asp-action="Users" class="row g-3">
            <div class="col-md-7">
                <input type="text" name="search" class="form-control" placeholder="Search by ID, Name or Email..." value="@Model.SearchTerm">
            </div>
            <div class="col-md-3">
                <select name="role" class="form-select">
                    <option value="All">All Roles</option>
                    <option value="User" selected="@(Model.RoleFilter == "User")">User</option>
                    <option value="Staff" selected="@(Model.RoleFilter == "Staff")">Staff</option>
                    <option value="Ban" selected="@(Model.RoleFilter == "Ban")">Banned</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0" style="font-size: 0.9rem;">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Joined</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="ps-4">#@user.UserID</td>
                                <td class="fw-bold">@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@(user.Phone ?? "-")</td>
                                <td>
                                    @if (user.Role == "Ban")
                                    {
                                        <span class="badge bg-danger">Banned</span>
                                    }
                                    else if (user.Role == "Staff")
                                    {
                                        <span class="badge bg-warning text-dark">Staff</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark">User</span>
                                    }
                                </td>
                                <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-end pe-4">
                                    @* --- ACTION BUTTONS LOGIC --- *@
                                    @if (user.Role == "Ban")
                                    {
                                        <button class="btn btn-sm btn-outline-success" title="Unban User"
                                                onclick="confirmUnban(@user.UserID, '@System.Web.HttpUtility.JavaScriptStringEncode(user.FullName)')">
                                            <i class="fas fa-check-circle"></i> Unban
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-danger" title="Ban User"
                                                onclick="confirmBan(@user.UserID, '@System.Web.HttpUtility.JavaScriptStringEncode(user.FullName)')">
                                            <i class="fas fa-ban"></i> Ban
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="7" class="text-center py-4 text-muted">No users found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
                Page @(Model.Users.PageCount < Model.Users.PageNumber ? 0 : Model.Users.PageNumber) of @Model.Users.PageCount
            </small>
            @Html.PagedListPager(Model.Users, page => Url.Action("Users", new { page, search = Model.SearchTerm, role = Model.RoleFilter }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                UlElementClasses = new string[] { "pagination", "pagination-sm", "mb-0" }
            })
        </div>
    </div>
</div>

@* --- BAN CONFIRMATION MODAL --- *@
<div class="modal fade" id="banModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-circle me-2"></i>Confirm Ban</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="fas fa-user-slash fa-4x text-danger mb-3"></i>
                <p class="mb-1">Are you sure you want to ban <strong id="banUserName"></strong>?</p>
                <p class="text-muted small">This action will prevent the user from logging into the system.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="BanUser" method="post">
                    <input type="hidden" id="banUserId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-gavel me-2"></i>Ban User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@* --- UNBAN CONFIRMATION MODAL (NEW) --- *@
<div class="modal fade" id="unbanModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-check-circle me-2"></i>Confirm Unban</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="fas fa-user-check fa-4x text-success mb-3"></i>
                <p class="mb-1">Are you sure you want to unban <strong id="unbanUserName"></strong>?</p>
                <p class="text-muted small">This will restore the user's access to the system.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="UnbanUser" method="post">
                    <input type="hidden" id="unbanUserId" name="id" />
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-unlock me-2"></i>Unban User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@* --- ADD/EDIT USER MODAL --- *@
<div class="modal fade" id="userModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="SaveUser" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="userModalLabel">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="userId" name="CurrentUser.UserID" value="0" />

                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="userName" name="CurrentUser.FullName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="userEmail" name="CurrentUser.Email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="text" class="form-control" id="userPhone" name="CurrentUser.Phone" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" id="userRole" name="CurrentUser.Role">
                            <option value="User">User</option>
                            <option value="Staff">Staff</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openUserModal() {
        document.getElementById('userId').value = 0;
        document.getElementById('userName').value = '';
        document.getElementById('userEmail').value = '';
        document.getElementById('userPhone').value = '';
        document.getElementById('userRole').value = 'User';
        document.getElementById('userModalLabel').innerText = 'Add User';
        var modal = new bootstrap.Modal(document.getElementById('userModal'));
        modal.show();
    }

    function confirmBan(id, name) {
        document.getElementById('banUserId').value = id;
        document.getElementById('banUserName').innerText = name;
        var modal = new bootstrap.Modal(document.getElementById('banModal'));
        modal.show();
    }

    // --- NEW: Unban Function ---
    function confirmUnban(id, name) {
        document.getElementById('unbanUserId').value = id;
        document.getElementById('unbanUserName').innerText = name;
        var modal = new bootstrap.Modal(document.getElementById('unbanModal'));
        modal.show();
    }
</script>