@using X.PagedList
@using X.PagedList.Mvc.Core
@model FlyEase.ViewModels.UsersPageVM

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold"><i class="fas fa-users me-2"></i>User Management</h2>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body py-3">
        <form method="get" asp-action="Users" class="row g-3">
            <div class="col-md-7">
                <input type="text" name="search" class="form-control" placeholder="Search by ID, Name or Email..." value="@Model.SearchTerm">
            </div>
            <div class="col-md-3">
                <select name="role" class="form-select">
                    <option value="All">All Roles</option>
                    <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                    <option value="User" selected="@(Model.RoleFilter == "User")">User</option>
                    <option value="Staff" selected="@(Model.RoleFilter == "Staff")">Staff</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0" style="font-size: 0.9rem;">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Joined</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="ps-4">#@user.UserID</td>
                                <td class="fw-bold">@user.FullName</td>
                                <td>@user.Email</td>
                                <td><span class="badge bg-info text-dark">@user.Role</span></td>
                                <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary me-1" onclick="editUser(@user.UserID, '@user.FullName', '@user.Email', '@user.Phone', '@user.Role')">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Delete this user?');">
                                        <input type="hidden" name="id" value="@user.UserID" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center py-4 text-muted">No users found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
                Page @(Model.Users.PageCount < Model.Users.PageNumber ? 0 : Model.Users.PageNumber) of @Model.Users.PageCount
            </small>

            @Html.PagedListPager(Model.Users, page => Url.Action("Users", new { page, search = Model.SearchTerm, role = Model.RoleFilter }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                UlElementClasses = new string[] { "pagination", "pagination-sm", "mb-0" },
                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always
            })
        </div>
    </div>
</div>