@using X.PagedList
@using X.PagedList.Mvc.Core
@model FlyEase.ViewModels.BookingsPageVM

@{
    ViewData["Title"] = "Manage Bookings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold"><i class="fas fa-calendar-check me-2"></i>Booking Management</h2>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body py-3">
        <form method="get" asp-action="Bookings" class="row g-3">
            <div class="col-md-7">
                <input type="text" name="search" class="form-control" placeholder="Search by Booking ID or Package Name..." value="@Model.SearchTerm">
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="All">All Statuses</option>
                    <option value="Confirmed" selected="@(Model.StatusFilter == "Confirmed")">Confirmed</option>
                    <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Completed</option>
                    <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                    <option value="Cancelled" selected="@(Model.StatusFilter == "Cancelled")">Cancelled</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0" style="font-size: 0.9rem;">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>User</th>
                        <th>Package</th>
                        <th>Booking Date</th>
                        <th>Travel Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        foreach (var b in Model.Bookings)
                        {
                            <tr id="row-@b.BookingID">
                                <td class="ps-4">#@b.BookingID</td>
                                <td>
                                    <div class="fw-bold">@b.User?.FullName</div>
                                    <small class="text-muted">@b.User?.Email</small>
                                </td>
                                <td>@b.Package?.PackageName</td>
                                <td>@b.BookingDate.ToString("dd MMM yyyy")</td>
                                <td>@b.TravelDate.ToString("dd MMM yyyy")</td>
                                <td class="fw-bold text-success">RM @b.FinalAmount.ToString("N2")</td>
                                <td class="status-cell">
                                    @if (b.BookingStatus == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (b.BookingStatus == "Confirmed")
                                    {
                                        <span class="badge bg-primary">Confirmed</span>
                                    }
                                    else if (b.BookingStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (b.BookingStatus == "Cancelled")
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@b.BookingStatus</span>
                                    }
                                </td>
                                <td class="action-cell text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary me-1 edit-btn"
                                            onclick="editBooking(@b.BookingID, '@b.BookingStatus')"
                                            @(b.BookingStatus == "Completed" || b.BookingStatus == "Cancelled" ? "disabled" : "")
                                            style="@(b.BookingStatus == "Cancelled" || b.BookingStatus == "Completed" ? "opacity: 0.5;" : "")">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="DeleteBooking" method="post" class="d-inline" onsubmit="return confirm('Delete this booking?');">
                                        <input type="hidden" name="id" value="@b.BookingID" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center py-4 text-muted">No bookings found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
                Page @(Model.Bookings.PageCount < Model.Bookings.PageNumber ? 0 : Model.Bookings.PageNumber) of @Model.Bookings.PageCount
            </small>
            @Html.PagedListPager(Model.Bookings, page => Url.Action("Bookings", new { page, search = Model.SearchTerm, status = Model.StatusFilter }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                UlElementClasses = new string[] { "pagination", "pagination-sm", "mb-0" }
            })
        </div>
    </div>
</div>

<div class="modal fade" id="bookingModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="updateBookingForm">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Edit Booking</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="modalAlert" class="alert alert-danger d-none"></div>

                    <input type="hidden" id="bookingId" name="CurrentBooking.BookingID" />

                    <div class="mb-3">
                        <label class="form-label">Booking Status</label>
                        <select class="form-select" id="bookingStatus" name="CurrentBooking.BookingStatus"></select>

                        <div class="form-text mt-2 text-primary" id="refundNotice" style="display:none;">
                            <i class="fas fa-exclamation-circle me-1"></i>
                            Setting status to <strong>Cancelled</strong> will automatically refund the user (if eligible).
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="saveBtn">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    function editBooking(id, status) {
        // 1. Reset Alert & Notice
        $('#modalAlert').addClass('d-none').text('');
        $('#refundNotice').hide();

        // 2. Set ID
        document.getElementById('bookingId').value = id;

        var select = document.getElementById('bookingStatus');
        select.innerHTML = ''; // Clear existing options

        // 3. Configure Dropdown Options based on current Status
        if (status === 'Pending') {
            // Pending -> Confirmed OR Cancelled
            select.add(new Option('Pending', 'Pending'));
            select.add(new Option('Confirmed', 'Confirmed'));
            select.add(new Option('Cancelled', 'Cancelled'));
        }
        else if (status === 'Confirmed') {
            // Confirmed -> Completed OR Cancelled (Refund) -- Pending REMOVED
            select.add(new Option('Confirmed', 'Confirmed'));
            select.add(new Option('Completed', 'Completed'));
            select.add(new Option('Cancelled', 'Cancelled'));
        }
        else {
            // Fallback for Completed/Cancelled
            select.add(new Option(status, status));
        }

        // Set selected value
        select.value = status;

        // Show Modal
        var modal = new bootstrap.Modal(document.getElementById('bookingModal'));
        modal.show();
    }

    // Toggle Refund Notice
    $('#bookingStatus').change(function() {
        if ($(this).val() === 'Cancelled') {
            $('#refundNotice').slideDown();
        } else {
            $('#refundNotice').slideUp();
        }
    });

    // AJAX Submission
    $(document).ready(function () {
        $('#updateBookingForm').submit(function (e) {
            e.preventDefault();

            var btn = $('#saveBtn');
            var originalText = btn.text();
            btn.prop('disabled', true).text('Saving...');

            $.ajax({
                url: '@Url.Action("UpdateBookingStatus", "AdminDashboard")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        // A. Close Modal
                        var modalEl = document.getElementById('bookingModal');
                        var modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();

                        // B. Update Row UI
                        updateRowUI(response.bookingId, response.newStatus);

                        // C. Optional: Show alert if refund happened
                        if(response.message && response.message.toLowerCase().includes("refund")) {
                            alert(response.message);
                        }
                    } else {
                        // Show Error in Modal
                        $('#modalAlert').removeClass('d-none').text(response.message);
                    }
                },
                error: function () {
                    $('#modalAlert').removeClass('d-none').text("An error occurred while processing your request.");
                },
                complete: function () {
                    btn.prop('disabled', false).text(originalText);
                }
            });
        });
    });

    function updateRowUI(id, newStatus) {
        var row = $('#row-' + id);
        var statusCell = row.find('.status-cell');
        var editBtn = row.find('.edit-btn');

        // 1. Update Badge
        var badge = '';
        if (newStatus === 'Confirmed') badge = '<span class="badge bg-primary">Confirmed</span>';
        else if (newStatus === 'Pending') badge = '<span class="badge bg-warning text-dark">Pending</span>';
        else if (newStatus === 'Cancelled') badge = '<span class="badge bg-danger">Cancelled</span>';
        else if (newStatus === 'Completed') badge = '<span class="badge bg-success">Completed</span>';

        statusCell.html(badge);

        // 2. Update Edit Button (Disable if finalized)
        if (newStatus === 'Cancelled' || newStatus === 'Completed') {
            editBtn.prop('disabled', true);
            editBtn.css('opacity', '0.5');
        } else {
            editBtn.prop('disabled', false);
            editBtn.css('opacity', '1');
            // Update click handler for next edit
            editBtn.attr('onclick', `editBooking(${id}, '${newStatus}')`);
        }
    }
</script>