@model FlyEase.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/forgetpass.css" asp-append-version="true" />

<div class="auth-wrapper-unified">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <div class="card shadow-lg border-0 rounded-lg auth-card-unified">

                    <div class="auth-header-unified">
                        <div class="auth-icon-circle">
                            <i class="fas fa-lock-open"></i>
                        </div>
                        <h3 class="font-weight-light my-1">Set New Password</h3>
                        <small class="opacity-75">Create a strong password to secure your account.</small>
                    </div>

                    <div class="auth-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />

                            <!-- New Password -->
                            <div class="form-floating mb-3 position-relative">
                                <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" placeholder="New Password" />
                                <label asp-for="NewPassword">New Password</label>
                                <button type="button" class="password-toggle-btn" onclick="togglePassword('newPassword', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>

                            <!-- Requirements -->
                            <div class="password-requirements">
                                <div class="fw-bold small mb-2 opacity-75">Password must contain:</div>
                                <div class="requirement-item" id="req-length"><i class="fas fa-circle"></i> At least 6 characters</div>
                                <div class="requirement-item" id="req-upper"><i class="fas fa-circle"></i> Uppercase letter (A-Z)</div>
                                <div class="requirement-item" id="req-lower"><i class="fas fa-circle"></i> Lowercase letter (a-z)</div>
                                <div class="requirement-item" id="req-number"><i class="fas fa-circle"></i> Number (0-9)</div>
                            </div>

                            <!-- Confirm -->
                            <div class="form-floating mb-4 position-relative">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" />
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <button type="button" class="password-toggle-btn" onclick="togglePassword('confirmPassword', this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <div id="match-feedback" class="small mt-1 ps-1" style="display:none;"></div>
                            </div>

                            <button type="submit" class="btn btn-primary-auth mb-3" id="submitBtn" disabled>
                                Reset Password
                            </button>
                        </form>

                        <div class="text-center">
                            <a href="@Url.Action("Login", "Auth")" class="btn-back">
                                <i class="fas fa-arrow-left me-2"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(id, btn) {
            const el = document.getElementById(id);
            const icon = btn.querySelector('i');
            if (el.type === 'password') { el.type = 'text'; icon.classList.replace('fa-eye', 'fa-eye-slash'); }
            else { el.type = 'password'; icon.classList.replace('fa-eye-slash', 'fa-eye'); }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const pass = document.getElementById('newPassword');
            const conf = document.getElementById('confirmPassword');
            const btn = document.getElementById('submitBtn');
            const reqs = {
                len: document.getElementById('req-length'),
                up: document.getElementById('req-upper'),
                low: document.getElementById('req-lower'),
                num: document.getElementById('req-number')
            };

            function check() {
                const v = pass.value;
                let ok = true;
                if(v.length >= 6) valid(reqs.len, true); else { valid(reqs.len, false); ok=false; }
                if(/[A-Z]/.test(v)) valid(reqs.up, true); else { valid(reqs.up, false); ok=false; }
                if(/[a-z]/.test(v)) valid(reqs.low, true); else { valid(reqs.low, false); ok=false; }
                if(/\d/.test(v)) valid(reqs.num, true); else { valid(reqs.num, false); ok=false; }

                const mDiv = document.getElementById('match-feedback');
                if (conf.value) {
                    mDiv.style.display = 'block';
                    if (conf.value === v) {
                        mDiv.innerHTML = '<span class="text-success fw-bold">Passwords match</span>';
                        if(ok) btn.disabled = false;
                    } else {
                        mDiv.innerHTML = '<span class="text-danger">Passwords do not match</span>';
                        btn.disabled = true;
                    }
                } else { mDiv.style.display = 'none'; btn.disabled = true; }
            }

            function valid(el, is) {
                if(is) { el.classList.add('valid'); el.querySelector('i').className = 'fas fa-check'; }
                else { el.classList.remove('valid'); el.querySelector('i').className = 'fas fa-circle'; }
            }
            pass.addEventListener('input', check);
            conf.addEventListener('input', check);
        });
    </script>
}