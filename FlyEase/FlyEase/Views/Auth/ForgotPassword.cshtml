@model FlyEase.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/forgetpass.css" asp-append-version="true" />

<div class="auth-wrapper-unified">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <!-- Matching Login.cshtml Card Styling -->
                <div class="card shadow-lg border-0 rounded-lg auth-card-unified">

                    <div class="auth-header-unified">
                        <div class="auth-icon-circle">
                            <i class="fas fa-key"></i>
                        </div>
                        <h3 class="font-weight-light my-1">Forgot Password</h3>
                        <small class="opacity-75">Enter your email and we'll send you a reset link.</small>
                    </div>

                    <div class="auth-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                                <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <button type="submit" class="btn btn-primary-auth">
                                Send Reset Link
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <a href="@Url.Action("Login", "Auth")" class="btn-back">
                                <i class="fas fa-arrow-left me-2"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Only add loading state if the form is valid
            $('#forgotPasswordForm').on('submit', function(e) {
                if($(this).valid()) {
                    const btn = $(this).find('button[type="submit"]');
                    const originalText = btn.text();

                    btn.prop('disabled', true);
                    btn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Sending...');

                    // If server response is slow or fails without refresh, we might want to re-enable after timeout
                    // But for normal navigation, this prevents double clicks.
                }
            });
        });
    </script>
}