@model FlyEase.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card fade-in" style="max-width: 450px;">
        <div class="auth-header">
            <h2 class="text-white mb-0">Reset Password</h2>
            <p class="text-white-50 mb-0">We'll send you a new password via email</p>
        </div>

        <div class="auth-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success animate-slide-down">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                </div>
            }

            <form method="post" id="forgotPasswordForm" novalidate>
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="text" class="form-control" name="Email"
                               placeholder="Enter your registered email">
                    </div>
                    @if (ViewData.ModelState["Email"]?.Errors?.Count > 0)
                    {
                        <div class="text-danger small mt-1">
                            @ViewData.ModelState["Email"].Errors[0].ErrorMessage
                        </div>
                    }
                </div>

                <button type="submit" class="btn-primary w-100">
                    <i class="fas fa-paper-plane me-2"></i> Send New Password
                </button>
            </form>

            <div class="auth-footer text-center">
                <p class="mb-2">Remember your password?</p>
                <a href="@Url.Action("Login", "Auth")" class="auth-link">
                    <i class="fas fa-arrow-left me-1"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}