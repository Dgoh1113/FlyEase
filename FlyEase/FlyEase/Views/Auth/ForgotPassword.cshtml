@model FlyEase.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <div class="forgot-password-icon">
                <i class="fas fa-key"></i>
            </div>
            <h2>Forgot Password</h2>
            <p class="forgot-password-subtitle">We'll send you a secure reset link</p>
        </div>

        <div class="forgot-password-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <input asp-for="Email" class="form-control"
                               placeholder="Enter your registered email"
                               autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-paper-plane me-2"></i>
                    Send Reset Link
                </button>

                <div class="text-center mt-3">
                    <p class="small text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Reset link expires in <strong>2 minute</strong>
                    </p>
                </div>
            </form>

            <div class="forgot-password-footer">
                <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Form submission loading state
            $('#forgotPasswordForm').submit(function() {
                const btn = $(this).find('button[type="submit"]');
                btn.addClass('btn-loading');
                btn.prop('disabled', true);
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Sending...');
            });

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Focus on email input
            $('#Email').focus();
        });
    </script>
}