@model FlyEase.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card fade-in" style="max-width: 450px;">
        <div class="auth-header">
            <h2 class="text-white mb-0">Welcome Back</h2>
            <p class="text-white-50 mb-0">Login to your account</p>
        </div>

        <div class="auth-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success animate-slide-down">
                    <i class="fas fa-check-circle"></i> @ViewBag.SuccessMessage
                </div>
            }

            <form method="post" id="loginForm" novalidate>
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="form-label" for="email">Email Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="email" id="email" class="form-control" name="Email"
                               value="@(Model?.Email ?? "")"
                               placeholder="Enter your email" required>
                    </div>
                    @if (ViewData.ModelState["Email"]?.Errors?.Count > 0)
                    {
                        <div class="text-danger small mt-1">
                            @ViewData.ModelState["Email"].Errors[0].ErrorMessage
                        </div>
                    }
                </div>

                <div class="form-group">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="form-label" for="password">Password</label>
                        <a href="@Url.Action("ForgotPassword", "Auth")" class="auth-link small">Forgot password?</a>
                    </div>
                    <div class="input-with-icon">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" id="password" class="form-control" name="Password"
                               placeholder="Enter your password" required>
                        <button type="button" class="password-toggle" tabindex="-1">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    @if (ViewData.ModelState["Password"]?.Errors?.Count > 0)
                    {
                        <div class="text-danger small mt-1">
                            @ViewData.ModelState["Password"].Errors[0].ErrorMessage
                        </div>
                    }
                </div>

                <div class="form-group">
                    <label class="checkbox-container">
                        <input type="checkbox" name="RememberMe" @(Model?.RememberMe == true ? "checked" : "")>
                        <span class="checkmark"></span>
                        Remember me
                    </label>
                </div>

                <button type="submit" class="btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Sign In
                </button>
            </form>

            <div class="auth-footer">
                <p>Don't have an account? <a href="@Url.Action("Register", "Auth")" class="auth-link">Sign up</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js"></script>
}