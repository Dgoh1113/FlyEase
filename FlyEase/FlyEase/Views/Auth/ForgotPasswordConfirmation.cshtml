@{
    ViewData["Title"] = "Check Your Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/css/auth.css" />
    <link rel="stylesheet" href="~/css/forgetpass.css" />
}

<div class="auth-container">
    <div class="confirmation-container fade-in">
        <div class="confirmation-icon">
            <i class="fas fa-envelope-open"></i>
        </div>

        <h2 class="confirmation-title">Check Your Email</h2>

        <p class="confirmation-message">
            We've sent a password reset link to your email address.
        </p>

        <div class="timer-highlight">
            <i class="fas fa-clock me-2"></i>
            Link expires in: <strong>30 seconds</strong>
        </div>

        <div class="check-steps">
            <div class="step">
                <div class="step-number">1</div>
                <div>
                    <strong>Open your email</strong><br>
                    <small class="text-muted">Check your inbox (and spam folder)</small>
                </div>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <div>
                    <strong>Click the reset link</strong><br>
                    <small class="text-muted">Link expires in 30 seconds for security</small>
                </div>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <div>
                    <strong>Create new password</strong><br>
                    <small class="text-muted">Choose a strong, memorable password</small>
                </div>
            </div>
        </div>

        <div class="warning-box">
            <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
            <strong>Important:</strong> If you don't see the email in a few minutes, please:
            <ul class="small mt-2 mb-0">
                <li>Check your spam or junk folder</li>
                <li>Add noreply@flyease.com to your contacts</li>
                <li>Try requesting a new link</li>
            </ul>
        </div>

        <div class="mt-4">
            <a href="@Url.Action("Login", "Auth")" class="btn-primary">
                <i class="fas fa-arrow-left me-2"></i> Back to Login
            </a>
        </div>
    </div>
</div>