@{
    ViewData["Title"] = "Check Your Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <i class="fas fa-envelope-open-text fa-4x text-success mb-3"></i>
    <h2 class="auth-title">Check Your Email</h2>
    <p class="text-muted">
        If an account exists with that email, we have sent you a password reset link.
    </p>
    <p class="small text-muted">Please check your spam folder if you don't see it.</p>

    <a href="@Url.Action("Login", "Auth")" class="btn-primary mt-3 text-decoration-none d-inline-block">
        Back to Login
    </a>
</div>