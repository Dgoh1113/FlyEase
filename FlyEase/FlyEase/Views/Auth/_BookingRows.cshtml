@model IEnumerable<FlyEase.ViewModels.BookingDisplayModel>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <tr>
            <td>#@item.BookingID</td>
            <td>
                <span class="fw-bold text-dark">@item.PackageTitle</span>
            </td>
            <td>@item.BookingDate.ToString("dd MMM yyyy")</td>
            <td>
                @if (item.Status == "Completed")
                {
                    <span class="badge bg-success">Paid</span>
                }
                else if (item.Status == "Deposit")
                {
                    <span class="badge bg-warning text-dark">Deposit</span>
                }
                else if (item.Status == "Cancelled")
                {
                    <span class="badge bg-danger">Cancelled</span>
                }
                else
                {
                    <span class="badge bg-secondary">Pending</span>
                }
            </td>
            <td class="fw-bold">RM @item.TotalAmount.ToString("N2")</td>
            <td>
                @if (item.Status == "Completed" && !item.IsReviewed)
                {
                    <a asp-controller="Feedback" asp-action="Create" asp-route-bookingId="@item.BookingID"
                       class="btn btn-sm btn-outline-warning">
                        <i class="fas fa-star me-1"></i>Rate
                    </a>
                }
                else if (item.IsReviewed)
                {
                    <span class="text-success small"><i class="fas fa-check me-1"></i>Reviewed</span>
                }
                else
                {
                    <span class="text-muted small">-</span>
                }
            </td>
            <td>
                <a asp-controller="Payment" asp-action="BookingHistoryDetails" asp-route-id="@item.BookingID"
                   class="btn btn-sm btn-primary">
                    <i class="fas fa-eye me-1"></i> View Details
                </a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7" class="text-center py-4 text-muted">
            <i class="fas fa-box-open fa-2x mb-2"></i>
            <p class="mb-0">No bookings found.</p>
            <a asp-controller="Home" asp-action="Packages" class="btn btn-sm btn-link">Browse Packages</a>
        </td>
    </tr>
}