@model FlyEase.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Payment Details - Complete Your Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Progress Bar -->
            <partial name="_BookingProgress" />

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>Payment Details
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Booking Summary -->
                    <div class="alert alert-success mb-4">
                        <h6 class="alert-heading">Booking Confirmed!</h6>
                        <p class="mb-1"><strong>Package:</strong> @Model.PackageName</p>
                        <p class="mb-1"><strong>Traveler:</strong> @Model.FullName</p>
                        <p class="mb-1"><strong>Travel Date:</strong> @Model.TravelDate.ToString("dd MMM yyyy")</p>
                        <p class="mb-0"><strong>Total Amount:</strong> <span class="fw-bold text-primary">RM @Model.FinalAmount.ToString("N2")</span></p>
                    </div>

                    <form asp-action="PaymentDetails" method="post">
                        <!-- Payment Method -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Payment Method *</label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-check card h-100">
                                        <input class="form-check-input" type="radio" name="PaymentMethod"
                                               id="creditCard" value="Credit Card" checked>
                                        <label class="form-check-label card-body text-center" for="creditCard">
                                            <i class="fab fa-cc-visa fa-2x text-primary mb-2"></i><br>
                                            <small>Credit Card</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check card h-100">
                                        <input class="form-check-input" type="radio" name="PaymentMethod"
                                               id="debitCard" value="Debit Card">
                                        <label class="form-check-label card-body text-center" for="debitCard">
                                            <i class="fab fa-cc-mastercard fa-2x text-danger mb-2"></i><br>
                                            <small>Debit Card</small>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check card h-100">
                                        <input class="form-check-input" type="radio" name="PaymentMethod"
                                               id="onlineBanking" value="Online Banking">
                                        <label class="form-check-label card-body text-center" for="onlineBanking">
                                            <i class="fas fa-mobile-alt fa-2x text-success mb-2"></i><br>
                                            <small>Online Banking</small>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
                        </div>

                        <!-- Card Details -->
                        <div id="cardDetails">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label asp-for="CardHolderName" class="form-label">Card Holder Name *</label>
                                    <input asp-for="CardHolderName" class="form-control" placeholder="JOHN DOE">
                                    <span asp-validation-for="CardHolderName" class="text-danger small"></span>
                                </div>

                                <div class="col-12 mb-3">
                                    <label asp-for="CardNumber" class="form-label">Card Number *</label>
                                    <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456">
                                    <span asp-validation-for="CardNumber" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExpiryDate" class="form-label">Expiry Date (MM/YY) *</label>
                                    <input asp-for="ExpiryDate" class="form-control" placeholder="12/25">
                                    <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="CVV" class="form-label">CVV *</label>
                                    <input asp-for="CVV" class="form-control" placeholder="123">
                                    <span asp-validation-for="CVV" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="alert alert-info mt-4">
                            <h6><i class="fas fa-shield-alt me-2"></i>Secure Payment</h6>
                            <p class="mb-0 small">
                                Your payment information is encrypted and secure. We never store your complete card details.
                                All transactions are protected by SSL encryption.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="CustomerInfo" asp-route-packageId="@Model.PackageID"
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                Review & Confirm <i class="fas fa-check-circle ms-1"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
