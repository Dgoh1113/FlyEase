@model FlyEase.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Payment Details - Complete Your Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Progress Bar -->
            <partial name="_BookingProgress" model="2" />

            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>Payment Details
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Booking Summary -->
                    <div class="alert alert-success border-0 mb-4">
                        <div class="row">
                            <div class="col-md-8">
                                <h6 class="alert-heading mb-2">Booking Confirmed! ✅</h6>
                                <p class="mb-1"><strong>@Model.PackageName</strong></p>
                                <p class="mb-1">Traveler: @Model.FullName</p>
                                <p class="mb-1">Travel Date: @Model.TravelDate.ToString("dd MMM yyyy")</p>
                                <p class="mb-0">People: @Model.NumberOfPeople person(s)</p>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="fs-4 fw-bold text-primary">RM @Model.FinalAmount.ToString("N2")</div>
                                <small class="text-muted">Total Amount</small>
                            </div>
                        </div>
                    </div>

                    <form asp-action="PaymentDetails" method="post" id="paymentForm">
                        @Html.AntiForgeryToken()

                        <!-- Payment Method -->
                        <div class="mb-4">
                            <label asp-for="PaymentMethod" class="form-label fw-semibold fs-6">Payment Method</label>
                            <select asp-for="PaymentMethod" class="form-select form-select-lg">
                                <option value="Credit Card">Credit Card</option>
                                <option value="Debit Card">Debit Card</option>
                                <option value="Online Banking">Online Banking</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
                        </div>

                        <!-- Card Details -->
                        <div class="card border-0 bg-light p-4 mb-4">
                            <h6 class="mb-3 text-muted">
                                <i class="fas fa-lock me-2 text-success"></i>Card Details
                            </h6>

                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label asp-for="CardHolderName" class="form-label fw-semibold">Card Holder Name</label>
                                    <input asp-for="CardHolderName" class="form-control form-control-lg"
                                           placeholder="JOHN DOE">
                                    <span asp-validation-for="CardHolderName" class="text-danger small"></span>
                                </div>

                                <div class="col-12 mb-3">
                                    <label asp-for="CardNumber" class="form-label fw-semibold">Card Number</label>
                                    <input asp-for="CardNumber" class="form-control form-control-lg"
                                           placeholder="1234 5678 9012 3456">
                                    <span asp-validation-for="CardNumber" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExpiryDate" class="form-label fw-semibold">Expiry Date</label>
                                    <input asp-for="ExpiryDate" class="form-control form-control-lg"
                                           placeholder="MM/YY">
                                    <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="CVV" class="form-label fw-semibold">CVV</label>
                                    <input asp-for="CVV" class="form-control form-control-lg"
                                           placeholder="123">
                                    <span asp-validation-for="CVV" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="alert alert-info border-0">
                            <div class="d-flex">
                                <i class="fas fa-shield-alt fa-2x text-success me-3"></i>
                                <div>
                                    <h6 class="alert-heading">Secure Payment</h6>
                                    <p class="mb-0 small">
                                        Your payment information is encrypted and secure. We never store your complete card details.
                                        All transactions are protected by SSL encryption.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="CustomerInfo" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-1"></i>Back
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-lock me-2"></i>
                                Review & Confirm - RM @Model.FinalAmount.ToString("N2")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Format card number
        document.getElementById('CardNumber')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ');
            if (formattedValue) {
                e.target.value = formattedValue;
            }
        });
    </script>
}