@{
    ViewData["Title"] = "Card Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>Card Payment
                        @if (!string.IsNullOrEmpty(ViewBag.StripePublishableKey))
                        {
                            <span class="badge bg-success">Connected to Stripe</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Demo Mode</span>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success mb-4">
                        <h6 class="alert-heading">Payment Amount</h6>
                        <h4 class="text-center my-3">RM @ViewBag.FinalAmount.ToString("N2")</h4>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.StripePublishableKey))
                    {
                        <div class="alert alert-success mb-4">
                            <i class="fas fa-shield-alt me-2"></i>
                            <strong>Connected to Stripe Test Mode</strong> - Real test transactions will appear in Stripe dashboard
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Demo Mode</strong> - Not connected to Stripe. Add Stripe keys in appsettings.json
                        </div>
                    }

                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        This creates a <strong>@(!string.IsNullOrEmpty(ViewBag.StripePublishableKey) ? "REAL" : "DEMO")</strong> transaction
                    </div>

                    <form method="post" action="/Payment/CardPayment" id="payment-form">
                        @Html.AntiForgeryToken()

                        <!-- Test card info -->
                        <div class="alert alert-warning small mb-4">
                            <i class="fas fa-vial me-1"></i>
                            <strong>Test Card:</strong> 4242 4242 4242 4242 | 12/34 | 123
                            <br>
                            <small>Use this test card for Stripe Test Mode</small>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Card Holder Name *</label>
                                <input type="text" name="cardholder" class="form-control" placeholder="John Doe" required value="Test Customer">
                            </div>

                            <div class="col-12 mb-3">
                                <label class="form-label">Card Number *</label>
                                <input type="text" name="cardNumber" class="form-control" placeholder="4242 4242 4242 4242" required value="4242 4242 4242 4242">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Date (MM/YY) *</label>
                                <input type="text" name="expiry" class="form-control" placeholder="12/34" required value="12/34">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">CVV *</label>
                                <input type="text" name="cvv" class="form-control" placeholder="123" maxlength="4" required value="123">
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="terms" required checked>
                            <label class="form-check-label small" for="terms">
                                I authorize payment of RM @ViewBag.FinalAmount.ToString("N2")
                            </label>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a href="/Payment/PaymentMethod" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back
                            </a>
                            <button type="submit" class="btn btn-success btn-lg" id="submit-btn">
                                @if (!string.IsNullOrEmpty(ViewBag.StripePublishableKey))
                                {
                                    <i class="fas fa-bolt me-2"></i>
                                    <span>Pay with Stripe</span>
                                }
                                else
                                {
                                    <i class="fas fa-lock me-2"></i>
                                    <span>Pay RM @ViewBag.FinalAmount.ToString("N2")</span>
                                }
                            </button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewBag.StripePublishableKey))
                    {
                        <div class="alert alert-light mt-4">
                            <h6><i class="fas fa-check-circle me-2 text-success"></i>Stripe Connected</h6>
                            <p class="mb-0 small">Transactions will appear in your <a href="https://dashboard.stripe.com/test/payments" target="_blank">Stripe Test Dashboard</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-format card number
        document.querySelector('input[name="cardNumber"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formatted = '';
            for (let i = 0; i < value.length; i++) {
                if (i > 0 && i % 4 === 0) formatted += ' ';
                formatted += value[i];
            }
            e.target.value = formatted.substring(0, 19);
        });

        // Auto-format expiry
        document.querySelector('input[name="expiry"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/gi, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value.substring(0, 5);
        });

        // Show processing
        document.getElementById('payment-form')?.addEventListener('submit', function() {
            const btn = document.getElementById('submit-btn');
            if (btn) {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
            }
        });
    </script>
}