@using FlyEase.Controllers
@using FlyEase.ViewModels
@{
    ViewData["Title"] = "Touch 'n Go Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var customerInfo = Context.Session.GetObject<CustomerInfoViewModel>("CustomerInfo");
    var finalAmount = customerInfo?.FinalAmount ?? 0;

    // Generate a random QR code data (in real app, this would be dynamic)
    var qrData = $"TNG|FlyEase|{finalAmount}|{DateTime.Now:yyyyMMddHHmmss}";

    // Fixed: Define these variables
    var tngUsername = "@FlyEaseTravel"; // Your TNG username
    var tngPhone = "012-345 6789"; // Your TNG phone number
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Progress Bar -->
            <partial name="_BookingProgress" />

            <div class="card payment-card border-0 shadow-lg" style="border-top: 5px solid #FF6B00 !important;">
                <div class="card-header tng-header text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="tng-icon-container">
                            <i class="fas fa-bolt fa-3x"></i>
                        </div>
                        <div class="ms-4">
                            <h2 class="mb-1 fw-bold">Touch 'n Go eWallet</h2>
                            <p class="mb-0 opacity-75">Instant Mobile Payment</p>
                        </div>
                        <div class="ms-auto">
                            <span class="badge bg-white text-warning px-3 py-2">
                                <i class="fas fa-mobile-alt me-1"></i> MOBILE
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Payment Amount -->
                    <div class="text-center mb-5">
                        <p class="text-muted mb-1">Pay Now With</p>
                        <div class="tng-logo-large mb-3">
                            <span class="tng-text">TNG</span>
                            <span class="tng-superscript">ewallet</span>
                        </div>
                        <h1 class="display-4 fw-bold tng-orange">RM @finalAmount.ToString("N2")</h1>
                        <p class="text-muted">One tap payment • Instant confirmation</p>
                    </div>

                    <!-- QR Code Section -->
                    <div class="row align-items-center mb-5">
                        <div class="col-md-6 text-center">
                            <div class="qr-container p-4">
                                <div class="qr-code-placeholder mb-3">
                                    <!-- In real app, generate actual QR code -->
                                    <div class="fake-qr">
                                        <div class="qr-grid">
                                            @for (int i = 0; i < 25; i++)
                                            {
                                                <div class="qr-cell @(new Random().Next(0, 2) == 1 ? "qr-filled" : "")"></div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <p class="small text-muted mb-0">Scan QR with TNG app</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="payment-options">
                                <h5 class="fw-bold mb-3">Payment Methods</h5>

                                <div class="list-group">
                                    <div class="list-group-item border-0 p-3 mb-2 bg-light rounded-3">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fas fa-qrcode fa-2x tng-orange"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-1">Scan QR Code</h6>
                                                <p class="small text-muted mb-0">Open TNG app → Scan QR → Pay</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="list-group-item border-0 p-3 mb-2 bg-light rounded-3">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fas fa-user-tag fa-2x tng-orange"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-1">Send to TNG ID</h6>
                                                <p class="small text-muted mb-0">
                                                    Send to: <code class="bg-warning text-dark px-2 py-1 rounded">@tngUsername</code>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="list-group-item border-0 p-3 bg-light rounded-3">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fas fa-phone fa-2x tng-orange"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-1">Phone Number</h6>
                                                <p class="small text-muted mb-0">
                                                    Transfer to: <code class="bg-warning text-dark px-2 py-1 rounded">012-345 6789</code>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Verification Form -->
                    <div class="verification-form mt-5">
                        <h5 class="fw-bold mb-4 text-center">
                            <i class="fas fa-check-circle me-2 tng-orange"></i>Payment Verification
                        </h5>

                        <form method="post" action="/Payment/ProcessTNGPayment" id="tngForm">
                            @Html.AntiForgeryToken()

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="tngTransactionId" name="transactionId"
                                               placeholder="TNG-ABC123XYZ" pattern="^TNG-\w{9,12}$" required>
                                        <label for="tngTransactionId">TNG Transaction ID *</label>
                                        <div class="form-text">
                                            Format: TNG-ABC123XYZ (from TNG app receipt)
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                                               placeholder="0123456789" pattern="^01[0-9]{8,9}$" required>
                                        <label for="phoneNumber">Your Phone Number *</label>
                                        <div class="form-text">
                                            The phone number linked to your TNG account
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="datetime-local" class="form-control" id="paymentTime" name="paymentTime"
                                               max="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                                               min="@DateTime.Now.AddHours(-1).ToString("yyyy-MM-ddTHH:mm")" required>
                                        <label for="paymentTime">Payment Time *</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                                            <option value="">Select method</option>
                                            <option value="QR_SCAN">QR Code Scan</option>
                                            <option value="TNG_ID">TNG ID Transfer</option>
                                            <option value="PHONE">Phone Number Transfer</option>
                                            <option value="CARD">TNG Card Top-up</option>
                                        </select>
                                        <label for="paymentMethod">Payment Method *</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="senderTngId" name="senderTngId"
                                               placeholder="Your TNG ID (optional)">
                                        <label for="senderTngId">Your TNG ID (Optional)</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Instant Verification Badge -->
                            <div class="alert alert-warning border-warning mt-4">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <i class="fas fa-bolt fa-2x"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-bold mb-1">Instant Auto-Verification</h6>
                                        <p class="mb-0">
                                            Enter your TNG transaction details above.
                                            <span class="fw-bold">Valid transactions are automatically verified and completed immediately.</span>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Terms -->
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="tngTerms" required>
                                <label class="form-check-label" for="tngTerms">
                                    I confirm that I have completed the TNG payment with the details provided.
                                    I understand this is an <span class="fw-bold">instant verified payment</span>.
                                </label>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                                <a href="/Payment/PaymentMethod" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="fas fa-arrow-left me-2"></i>Back
                                </a>
                                <button type="submit" class="btn tng-btn btn-lg px-5" id="submitTngBtn">
                                    <i class="fas fa-bolt me-2"></i>
                                    Verify & Complete
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- TNG Features -->
                    <div class="row mt-5 pt-4 border-top">
                        <div class="col-md-4 text-center mb-3">
                            <div class="feature-icon mb-2">
                                <i class="fas fa-bolt fa-2x tng-orange"></i>
                            </div>
                            <h6 class="fw-bold">Instant Payment</h6>
                            <p class="small text-muted">Payment confirmed in seconds</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="feature-icon mb-2">
                                <i class="fas fa-shield-alt fa-2x tng-orange"></i>
                            </div>
                            <h6 class="fw-bold">Secure</h6>
                            <p class="small text-muted">Bank-level security</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="feature-icon mb-2">
                                <i class="fas fa-check-circle fa-2x tng-orange"></i>
                            </div>
                            <h6 class="fw-bold">Auto-Verified</h6>
                            <p class="small text-muted">No manual approval needed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .tng-header {
            background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%) !important;
        }

        .tng-orange {
            color: #FF6B00 !important;
        }

        .tng-icon-container {
            width: 70px;
            height: 70px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .tng-logo-large {
            font-size: 3.5rem;
            font-weight: 900;
            color: #FF6B00;
            letter-spacing: -2px;
        }

        .tng-text {
            color: #FF6B00;
        }

        .tng-superscript {
            font-size: 1.5rem;
            vertical-align: super;
            color: #333;
            font-weight: 300;
        }

        .qr-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .fake-qr {
            width: 200px;
            height: 200px;
            margin: 0 auto;
            background: white;
            border: 2px solid #FF6B00;
            padding: 10px;
        }

        .qr-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 2px;
            width: 100%;
            height: 100%;
        }

        .qr-cell {
            background: #f8f9fa;
        }

            .qr-cell.qr-filled {
                background: #FF6B00;
            }

        .tng-btn {
            background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%);
            border: none;
            color: white;
            font-weight: bold;
            transition: all 0.3s;
        }

            .tng-btn:hover {
                background: linear-gradient(135deg, #E55A00 0%, #E57A00 100%);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 107, 0, 0.3);
                color: white;
            }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: rgba(255, 107, 0, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }

        .form-control:focus {
            border-color: #FF6B00;
            box-shadow: 0 0 0 0.25rem rgba(255, 107, 0, 0.25);
        }

        .form-select:focus {
            border-color: #FF6B00;
            box-shadow: 0 0 0 0.25rem rgba(255, 107, 0, 0.25);
        }

        .list-group-item {
            transition: all 0.3s;
        }

            .list-group-item:hover {
                transform: translateX(5px);
                box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            }
    </style>


    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('tngForm');
            const submitBtn = document.getElementById('submitTngBtn');

            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                } else {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Verifying...';

                    // Simulate TNG verification
                    setTimeout(() => {
                        submitBtn.innerHTML = '<i class="fas fa-bolt me-2"></i>Payment Verified!';
                    }, 1500);
                }

                form.classList.add('was-validated');
            }, false);

            // Real-time validation for TNG Transaction ID
            const tngIdInput = document.getElementById('tngTransactionId');
            tngIdInput.addEventListener('input', function() {
                const pattern = /^TNG-\w{9,12}$/;
                if (pattern.test(this.value)) {
                    this.classList.add('is-valid');
                    this.classList.remove('is-invalid');
                } else {
                    this.classList.add('is-invalid');
                    this.classList.remove('is-valid');
                }
            });

            // Real-time validation for phone number
            const phoneInput = document.getElementById('phoneNumber');
            phoneInput.addEventListener('input', function() {
                const pattern = /^01[0-9]{8,9}$/;
                if (pattern.test(this.value)) {
                    this.classList.add('is-valid');
                    this.classList.remove('is-invalid');
                } else {
                    this.classList.add('is-invalid');
                    this.classList.remove('is-valid');
                }
            });

            // Set default payment time to now
            const now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            document.getElementById('paymentTime').value = now.toISOString().slice(0, 16);

            // Generate random QR code cells (visual effect)
            const qrCells = document.querySelectorAll('.qr-cell');
            qrCells.forEach(cell => {
                if (Math.random() > 0.5) {
                    cell.classList.add('qr-filled');
                }
            });
        });
    </script>
