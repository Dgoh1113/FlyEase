    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const travelDateInput = document.querySelector('input[name="TravelDate"]');
            const basePricePreview = document.getElementById('previewBasePrice');
            const discountPreview = document.getElementById('previewDiscount');
            const totalPreview = document.getElementById('previewTotal');

            function calculatePreview() {
                const basePrice = @(Model.PackagePrice* Model.NumberOfPeople);
                const travelDate = new Date(travelDateInput.value);
                const today = new Date();

                let discount = 0;

                // Early bird discount
                const daysInAdvance = (travelDate - today) / (1000 * 60 * 60 * 24);
                if (daysInAdvance >= 30) {
                    discount += basePrice * 0.10;
                }

                // Bulk discount
                const numberOfPeople = @Model.NumberOfPeople;
                if (numberOfPeople >= 5) {
                    discount += basePrice * 0.15;
                }

                const total = basePrice - discount;

                basePricePreview.textContent = basePrice.toFixed(2);
                discountPreview.textContent = discount.toFixed(2);
                totalPreview.textContent = total.toFixed(2);
            }

            travelDateInput.addEventListener('change', calculatePreview);

            // Initial calculation
            calculatePreview();
        });
    </script>
