@model FlyEase.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Customer Information - Book Your Trip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Progress Bar -->
            <partial name="_BookingProgress" model="1" />

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>Customer Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Package Summary -->
                    <div class="alert alert-info border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="alert-heading mb-1">@Model.PackageName</h6>
                                <p class="mb-0 text-muted">RM @Model.PackagePrice.ToString("N2") per person</p>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-success fs-6">@Model.NumberOfPeople person(s)</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="CustomerInfo" method="post" id="customerForm">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="PackageID" />
                        <input type="hidden" asp-for="PackageName" />
                        <input type="hidden" asp-for="PackagePrice" />
                        <input type="hidden" asp-for="NumberOfPeople" />
                        <input type="hidden" asp-for="TravelDate" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">
                                    <i class="fas fa-user me-1 text-primary"></i>Full Name
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg"
                                       placeholder="Enter your full name">
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-1 text-primary"></i>Email Address
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg"
                                       placeholder="your@email.com">
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-semibold">
                                    <i class="fas fa-phone me-1 text-primary"></i>Phone Number
                                </label>
                                <input asp-for="Phone" class="form-control form-control-lg"
                                       placeholder="e.g., 123456789">
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-users me-1 text-primary"></i>Number of People
                                </label>
                                <input type="number" class="form-control form-control-lg"
                                       value="@Model.NumberOfPeople" disabled>
                                <small class="text-muted">Change number of people on package selection page</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SpecialRequests" class="form-label fw-semibold">
                                <i class="fas fa-comment me-1 text-primary"></i>Special Requests
                            </label>
                            <textarea asp-for="SpecialRequests" class="form-control" rows="3"
                                      placeholder="Any special requirements or requests..."></textarea>
                            <span asp-validation-for="SpecialRequests" class="text-danger small"></span>
                        </div>

                        <!-- Price Summary -->
                        <div class="card bg-light mt-4">
                            <div class="card-body">
                                <h6 class="card-title text-muted">Price Summary</h6>
                                <div class="row">
                                    <div class="col-6">
                                        <small>Base Price (@Model.NumberOfPeople person(s)):</small>
                                    </div>
                                    <div class="col-6 text-end">
                                        <small>RM @((Model.PackagePrice * Model.NumberOfPeople).ToString("N2"))</small>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <small>Discounts:</small>
                                    </div>
                                    <div class="col-6 text-end text-success">
                                        <small>-RM @Model.DiscountAmount.ToString("N2")</small>
                                    </div>
                                </div>
                                <hr class="my-2">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Total Amount:</strong>
                                    </div>
                                    <div class="col-6 text-end">
                                        <strong class="text-primary fs-5">RM @Model.FinalAmount.ToString("N2")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a href="/" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                Continue to Payment <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}