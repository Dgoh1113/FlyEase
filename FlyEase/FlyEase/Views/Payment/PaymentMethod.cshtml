@model FlyEase.ViewModels.PaymentMethodViewModel
@{
    ViewData["Title"] = "Select Payment Method";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/css/booking.css" />
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <partial name="_BookingProgress" />

            <div class="card shadow-sm dashboard-card">
                <div class="card-header booking-header text-white">
                    <h4 class="mb-0"><i class="fas fa-wallet me-2"></i>Select Payment Method</h4>
                </div>

                <div class="card-body">

                    <div class="card p-3 mb-4 price-summary-custom border">
                        <h6 class="fw-bold mb-2">Booking Summary</h6>
                        <p class="mb-1"><strong>Package:</strong> @Model.PackageName</p>
                        <p class="mb-0">
                            <strong>Amount to Pay:</strong>
                            <span class="text-primary fw-bold">RM @Model.FinalAmount.ToString("N2")</span>
                        </p>
                    </div>

                    <h5 class="mb-3">Choose payment method:</h5>

                    <form asp-action="PaymentMethod" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="PackageName" />
                        <input type="hidden" asp-for="FinalAmount" />

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Error"]</div>
                        }
                        <span asp-validation-for="SelectedMethod" class="text-danger"></span>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_card" value="Credit Card">
                                <label class="btn w-100 h-100 text-start p-3 payment-card-custom border rounded" for="method_card">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3 text-primary fs-3"><i class="fas fa-credit-card"></i></div>
                                        <div>
                                            <h6 class="fw-bold mb-0">Credit/Debit Card</h6>
                                            <small class="text-muted">Pay with Visa/Mastercard</small>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_bank" value="Bank Transfer">
                                <label class="btn w-100 h-100 text-start p-3 payment-card-custom border rounded" for="method_bank">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3 text-success fs-3"><i class="fas fa-university"></i></div>
                                        <div>
                                            <h6 class="fw-bold mb-0">Bank Transfer</h6>
                                            <small class="text-muted">FPX Online Banking</small>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_tng" value="TouchNGo">
                                <label class="btn w-100 h-100 text-start p-3 payment-card-custom border rounded" for="method_tng">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3 text-warning fs-3"><i class="fas fa-wallet"></i></div>
                                        <div>
                                            <h6 class="fw-bold mb-0">Touch 'n Go</h6>
                                            <small class="text-muted">eWallet Payment</small>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_cash" value="Cash">
                                <label class="btn w-100 h-100 text-start p-3 payment-card-custom border rounded" for="method_cash">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3 text-info fs-3"><i class="fas fa-money-bill-wave"></i></div>
                                        <div>
                                            <h6 class="fw-bold mb-0">Cash / Counter</h6>
                                            <small class="text-muted">Pay at office</small>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back
                            </a>
                            <button type="submit" class="btn btn-primary fw-bold px-4">
                                Continue <i class="fas fa-arrow-right ms-1"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>