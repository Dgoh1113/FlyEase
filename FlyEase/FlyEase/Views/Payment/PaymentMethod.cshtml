@model FlyEase.ViewModels.PaymentMethodViewModel
@{
    ViewData["Title"] = "Select Payment Method";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <link rel="stylesheet" href="~/css/booking.css" />
    <style>
        .payment-method-card {
            transition: all 0.3s ease;
            border: 2px solid transparent;
            border-radius: 15px;
            overflow: hidden;
            height: 100%;
            cursor: pointer;
            background-color: #fff;
        }

        .payment-method-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
        }

        .payment-method-card.active {
            border-color: #0d6efd;
            background-color: #f0f7ff;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(13, 110, 253, 0.2);
        }
        
        .payment-method-card.active .method-icon {
            transform: scale(1.1);
        }

        .method-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 1.5rem;
            margin-right: 15px;
            transition: transform 0.3s ease;
        }

        .card-primary { background-color: #e7f1ff; color: #0d6efd; } 
        .card-purple  { background-color: #f3e8ff; color: #6f42c1; } 
        .card-success { background-color: #d1e7dd; color: #198754; } 
        .card-warning { background-color: #fff3cd; color: #ffc107; } 

        .payment-type-selector {
            background-color: #f8f9fa;
            border-radius: 12px;
            padding: 5px;
            display: flex;
            margin-bottom: 2rem;
            border: 1px solid #e9ecef;
        }

        .payment-type-option {
            flex: 1;
            text-align: center;
            padding: 15px;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .payment-type-input { display: none; }

        .payment-type-input:checked + .payment-type-option {
            background-color: white;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            border: 1px solid #dee2e6;
            color: #0d6efd;
            font-weight: bold;
        }

        .payment-type-input:checked + .payment-type-option::after {
            content: '';
            position: absolute;
            bottom: 0; left: 0; width: 100%; height: 3px;
            background-color: #0d6efd;
        }

        .amount-highlight {
            font-size: 1.25rem;
            display: block;
            margin-top: 5px;
        }
        
        .deposit-badge {
            background-color: #ffc107;
            color: #000;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.75rem;
            vertical-align: middle;
            margin-left: 5px;
        }
        d-flex{
            color: black;
        }
    </style>
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <partial name="_BookingProgress" />

            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="card-header booking-header text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-wallet fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-1 fw-bold">Select Payment Method</h4>
                            <p class="mb-0 opacity-75">Secure payment via Stripe</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-lg-5">
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="PaymentMethod" method="post" id="paymentMethodForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="PackageName" />
                        <input type="hidden" asp-for="FinalAmount" />
                        <input type="hidden" asp-for="DepositAmount" />

                        <h5 class="fw-bold mb-3">Payment Option</h5>
                        <div class="payment-type-selector">
                            <label class="flex-grow-1">
                                <input type="radio" asp-for="PaymentType" value="Full" class="payment-type-input" checked onchange="updateTotalDisplay('full')">
                                <div class="payment-type-option">
                                    <div class="small text-muted text-uppercase mb-1">Pay Full Amount</div>
                                    <div class="amount-highlight text-primary">RM @Model.FinalAmount.ToString("N2")</div>
                                </div>
                            </label>

                            @if (ViewBag.AllowDeposit == true)
                            {
                                <label class="flex-grow-1">
                                    <input type="radio" asp-for="PaymentType" value="Deposit" class="payment-type-input" onchange="updateTotalDisplay('deposit')">
                                    <div class="payment-type-option">
                                        <div class="small text-muted text-uppercase mb-1">
                                            Pay Deposit (30%) <span class="deposit-badge">Reserve Spot</span>
                                        </div>
                                        <div class="amount-highlight text-warning">RM @Model.DepositAmount.ToString("N2")</div>
                                    </div>
                                </label>
                            }
                        </div>

                        <h5 class="fw-bold mb-4 mt-5">Select Method</h5>
                        <span asp-validation-for="SelectedMethod" class="text-danger d-block mb-3"></span>

                        <div class="row g-4">
                            
                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_card" value="Credit Card">
                                <label class="btn p-0 w-100" for="method_card">
                                    <div class="payment-method-card p-4 shadow-sm">
                                        <div class="d-flex align-items-center">
                                            <div class="method-icon card-primary">
                                                <i class="fas fa-credit-card"></i> 
                                            </div>
                                            <div class="flex-grow-1 text-start">
                                                <h6 class="fw-bold mb-1">Credit / Debit Card</h6>
                                                <p class="text-muted small mb-0">Visa, Mastercard</p>
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_fpx" value="Online Banking">
                                <label class="btn p-0 w-100" for="method_fpx">
                                    <div class="payment-method-card p-4 shadow-sm">
                                        <div class="d-flex align-items-center">
                                            <div class="method-icon card-purple">
                                                <i class="fas fa-university"></i> 
                                            </div>
                                            <div class="flex-grow-1 text-start">
                                                <h6 class="fw-bold mb-1">Online Banking (FPX)</h6>
                                                <p class="text-muted small mb-0">Maybank2u, CIMB, etc.</p>
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_grab" value="GrabPay">
                                <label class="btn p-0 w-100" for="method_grab">
                                    <div class="payment-method-card p-4 shadow-sm">
                                        <div class="d-flex align-items-center">
                                            <div class="method-icon card-success">
                                                <i class="fas fa-mobile-alt"></i> 
                                            </div>
                                            <div class="flex-grow-1 text-start">
                                                <h6 class="fw-bold mb-1">GrabPay</h6>
                                                <p class="text-muted small mb-0">E-Wallet</p>
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check" asp-for="SelectedMethod" id="method_tng" value="TouchNGo">
                                <label class="btn p-0 w-100" for="method_tng">
                                    <div class="payment-method-card p-4 shadow-sm">
                                        <div class="d-flex align-items-center">
                                            <div class="method-icon card-warning">
                                                <i class="fas fa-wallet"></i>
                                            </div>
                                            <div class="flex-grow-1 text-start">
                                                <h6 class="fw-bold mb-1">Touch 'n Go</h6>
                                                <p class="text-muted small mb-0">E-Wallet</p>
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            </div>

                        </div>

                        <div class="d-flex justify-content-between mt-5 pt-4 border-top">
                            <a href="@Url.Action("CustomerInfo", "Payment", new { 
                                        packageId = Context.Session.GetString("OriginalPackageId"),
                                        people = Context.Session.GetString("OriginalPeople")
                                    })" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="continueBtn">
                                Continue <span id="btnAmountDisplay">RM @Model.FinalAmount.ToString("N2")</span> <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateTotalDisplay(type) {
        const fullAmount = @Model.FinalAmount;
        const depositAmount = @Model.DepositAmount;
        const displaySpan = document.getElementById('btnAmountDisplay');
        
        if (type === 'deposit') {
            displaySpan.innerText = 'RM ' + depositAmount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
        } else {
            displaySpan.innerText = 'RM ' + fullAmount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        const radioButtons = document.querySelectorAll('input[name="SelectedMethod"]');
        
        radioButtons.forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove active class from all
                document.querySelectorAll('.payment-method-card').forEach(card => card.classList.remove('active'));
                
                // Add active class to selected
                if (this.checked) {
                    const label = document.querySelector(`label[for="${this.id}"]`);
                    if (label) {
                        const card = label.querySelector('.payment-method-card');
                        if (card) card.classList.add('active');
                    }
                }
            });
        });

        // Initialize display
        const checkedType = document.querySelector('input[name="PaymentType"]:checked');
        if(checkedType) updateTotalDisplay(checkedType.value.toLowerCase());
        
        const checkedMethod = document.querySelector('input[name="SelectedMethod"]:checked');
        if(checkedMethod) checkedMethod.dispatchEvent(new Event('change'));
    });
</script>