@model FlyEase.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Confirmation - Review Your Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Progress Bar -->
            <partial name="_BookingProgress" model="3" />

            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>Booking Confirmation
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Success Alert -->
                    <div class="alert alert-success border-0 mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle fa-2x me-3"></i>
                            <div>
                                <h5 class="alert-heading mb-1">Ready to Complete Your Booking!</h5>
                                <p class="mb-0">Please review all details below before confirming your payment.</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Travel Details -->
                        <div class="col-md-6 mb-4">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <h6 class="card-title text-muted mb-3">
                                        <i class="fas fa-plane me-2"></i>Travel Details
                                    </h6>
                                    <p><strong>Package:</strong> @Model.PackageName</p>
                                    <p><strong>Travel Date:</strong> @Model.TravelDate.ToString("dd MMM yyyy")</p>
                                    <p><strong>Number of People:</strong> @Model.NumberOfPeople</p>
                                    <p><strong>Traveler:</strong> @Model.FullName</p>
                                    @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                                    {
                                        <p><strong>Special Requests:</strong> @Model.SpecialRequests</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Contact & Payment -->
                        <div class="col-md-6 mb-4">
                            <div class="card border-0 bg-light h-100">
                                <div class="card-body">
                                    <h6 class="card-title text-muted mb-3">
                                        <i class="fas fa-credit-card me-2"></i>Payment Details
                                    </h6>
                                    <p><strong>Email:</strong> @Model.Email</p>
                                    <p><strong>Phone:</strong> @Model.Phone</p>
                                    <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                                    <p><strong>Card Ending:</strong> **** @Model.CardNumber.Substring(Model.CardNumber.Length - 4)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Price Breakdown -->
                    <div class="card border-0 bg-primary text-white mb-4">
                        <div class="card-body">
                            <h6 class="card-title mb-3">Price Summary</h6>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-2">Base Price:</p>
                                </div>
                                <div class="col-6 text-end">
                                    <p class="mb-2">RM @Model.BasePrice.ToString("N2")</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-2">Discounts:</p>
                                </div>
                                <div class="col-6 text-end">
                                    <p class="mb-2 text-success">-RM @Model.DiscountAmount.ToString("N2")</p>
                                </div>
                            </div>
                            <hr class="my-2" style="border-color: rgba(255,255,255,0.3);">
                            <div class="row">
                                <div class="col-6">
                                    <h5 class="mb-0">Total Amount:</h5>
                                </div>
                                <div class="col-6 text-end">
                                    <h3 class="mb-0">RM @Model.FinalAmount.ToString("N2")</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Terms Acceptance -->
                    <div class="alert alert-warning border-0">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="acceptTerms" required>
                            <label class="form-check-label" for="acceptTerms">
                                I confirm that all information provided is accurate and I agree to the
                                <a href="#" class="text-decoration-none">Terms & Conditions</a> and
                                <a href="#" class="text-decoration-none">Cancellation Policy</a>.
                            </label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="PaymentDetails" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-1"></i>Back to Payment
                        </a>

                        <form asp-action="ProcessBooking" method="post" id="confirmForm">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-lg px-5" id="confirmButton" disabled>
                                <i class="fas fa-lock me-2"></i>
                                Confirm & Pay RM @Model.FinalAmount.ToString("N2")
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('acceptTerms').addEventListener('change', function() {
            document.getElementById('confirmButton').disabled = !this.checked;
        });

        document.getElementById('confirmForm').addEventListener('submit', function(e) {
            const confirmButton = document.getElementById('confirmButton');
            confirmButton.disabled = true;
            confirmButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
        });
    </script>
}