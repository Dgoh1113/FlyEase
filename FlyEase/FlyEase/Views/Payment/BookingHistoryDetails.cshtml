@model FlyEase.Data.Booking

@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // --- 1. Status Badge Logic ---
    string statusBadge = "bg-secondary";
    if (Model.BookingStatus == "Completed") { statusBadge = "bg-success"; }
    else if (Model.BookingStatus == "Confirmed") { statusBadge = "bg-primary"; }
    else if (Model.BookingStatus == "Deposit") { statusBadge = "bg-warning text-dark"; }
    else if (Model.BookingStatus == "Cancelled") { statusBadge = "bg-danger"; }
    else if (Model.BookingStatus == "Pending") { statusBadge = "bg-info text-dark"; }

    // --- 2. Data Preparation ---
    bool canCancel = ViewBag.CanCancel ?? false;
    decimal balanceDue = ViewBag.BalanceDue ?? 0;
    string imagePath = Model.Package.ImageURL?.Split(';').FirstOrDefault() ?? "/img/default-package.jpg";
}

<div class="container mt-5 mb-5">

    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div class="d-flex align-items-center gap-3">
            <a asp-controller="Auth" asp-action="Profile" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-2"></i>Back to Profile
            </a>
            <h4 class="mb-0 fw-bold">Booking #@Model.BookingID</h4>
            <span class="badge @statusBadge fs-6 px-3 py-2 rounded-pill">@Model.BookingStatus</span>
        </div>

        <div>
            @if (Model.BookingStatus == "Confirmed" || Model.BookingStatus == "Completed" || Model.BookingStatus == "Deposit")
            {
                <a asp-action="Receipt" asp-controller="Payment" asp-route-bookingId="@Model.BookingID" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-file-invoice me-2"></i>View Receipt
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0 mb-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-suitcase-rolling me-2"></i>Trip Details</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <img src="@imagePath" class="img-fluid rounded shadow-sm w-100"
                                 style="height:160px; object-fit:cover;" alt="@Model.Package.PackageName">
                        </div>
                        <div class="col-md-8">
                            <h4 class="fw-bold mb-1">@Model.Package.PackageName</h4>
                            <p class="text-muted mb-3"><i class="fas fa-map-marker-alt me-2 text-danger"></i>@Model.Package.Destination</p>

                            <div class="d-flex flex-wrap gap-2">
                                <div class="bg-light px-3 py-2 rounded border">
                                    <small class="text-muted d-block text-uppercase" style="font-size:0.7rem;">Travel Date</small>
                                    <strong class="text-dark">@Model.TravelDate.ToString("dd MMM yyyy")</strong>
                                </div>
                                <div class="bg-light px-3 py-2 rounded border">
                                    <small class="text-muted d-block text-uppercase" style="font-size:0.7rem;">Duration</small>
                                    <strong class="text-dark">@((Model.Package.EndDate - Model.Package.StartDate).Days + 1) Days</strong>
                                </div>
                                <div class="bg-light px-3 py-2 rounded border">
                                    <small class="text-muted d-block text-uppercase" style="font-size:0.7rem;">Travelers</small>
                                    <strong class="text-dark">@Model.NumberOfPeople Pax</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-history me-2"></i>Payment History</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th class="ps-4">Date</th>
                                    <th>Method</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th class="text-end pe-4">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Payments != null && Model.Payments.Any())
                                {
                                    @foreach (var pay in Model.Payments.OrderByDescending(p => p.PaymentDate))
                                    {
                                        <tr>
                                            <td class="ps-4 text-muted small">@pay.PaymentDate.ToString("dd MMM yyyy, HH:mm")</td>
                                            <td>
                                                @if (pay.PaymentMethod.Contains("Credit") || pay.PaymentMethod.Contains("Card") || pay.PaymentMethod.Contains("Stripe"))
                                                {
                                                    <span class="badge bg-light text-primary border"><i class="fab fa-stripe me-1"></i> Card</span>
                                                }
                                                else if (pay.PaymentMethod.Contains("Touch"))
                                                {
                                                    <span class="badge bg-primary text-white" style="background-color:#005EB8 !important">TNG eWallet</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark border">@pay.PaymentMethod</span>
                                                }
                                            </td>
                                            <td>
                                                @if (pay.IsDeposit)
                                                {
                                                    <span class="badge bg-info text-dark">Deposit (30%)</span>
                                                }
                                                else
                                                {

                                                    <span class="badge bg-secondary">Full Payment</span>
                                                }
                                            </td>
                                            <td>
                                                @if (pay.PaymentStatus == "Refunded")
                                                {
                                                    <span class="badge bg-danger-subtle text-danger"><i class="fas fa-undo me-1"></i> Refunded</span>
                                                }
                                                else if (pay.PaymentStatus == "Completed")
                                                {
                                                    <span class="badge bg-success-subtle text-success"><i class="fas fa-check me-1"></i> Paid</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning-subtle text-warning text-dark">@pay.PaymentStatus</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4 fw-bold">RM @pay.AmountPaid.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">No payment records found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Payment Summary</h5>

                    <div class="d-flex justify-content-between mb-2 small">
                        <span class="text-muted">Package Price (x@(Model.NumberOfPeople))</span>
                        <span>RM @Model.TotalBeforeDiscount.ToString("N2")</span>
                    </div>

                    @if (Model.TotalDiscountAmount > 0)
                    {
                        <div class="d-flex justify-content-between mb-2 small text-success">
                            <span>Total Discount</span>
                            <span>- RM @Model.TotalDiscountAmount.ToString("N2")</span>
                        </div>
                    }

                    <hr class="my-3 opacity-25">

                    <div class="d-flex justify-content-between mb-3 align-items-center">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bold fs-5">RM @Model.FinalAmount.ToString("N2")</span>
                    </div>

                    <div class="bg-light p-3 rounded mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Paid to date:</span>
                            <span class="fw-bold text-success">RM @((Model.FinalAmount - balanceDue).ToString("N2"))</span>
                        </div>
                    </div>

                    @if (balanceDue > 0 && Model.BookingStatus != "Cancelled")
                    {
                        <div class="alert alert-warning border-warning mb-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>Balance Due:</strong>
                                <strong class="text-danger">RM @balanceDue.ToString("N2")</strong>
                            </div>
                            <hr class="my-2">
                            <a asp-controller="Payment" asp-action="PayBalance" asp-route-bookingId="@Model.BookingID" class="btn btn-warning w-100 btn-sm fw-bold">
                                Pay Balance Now
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (Model.BookingStatus != "Cancelled" && Model.BookingStatus != "Completed")
            {
                <div class="card shadow-sm border-danger">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-danger mb-3"><i class="fas fa-exclamation-triangle me-2"></i>Cancellation Zone</h5>

                        @if (canCancel)
                        {
                            <p class="small text-muted mb-3">
                                Your trip is in <strong>@((Model.Package.StartDate - DateTime.Now).Days) days</strong>.
                                You are eligible for a refund (minus processing fees) if you cancel now.
                            </p>

                            <button type="button" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                Cancel Booking & Refund
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-secondary mb-0 small border-0 bg-light text-muted">
                                <div class="d-flex">
                                    <i class="fas fa-lock me-2 mt-1"></i>
                                    <div>
                                        <strong>Cancellation Locked</strong><br />
                                        Trips starting within 14 days cannot be cancelled or refunded online. Please contact support.
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-circle me-2"></i>Confirm Cancellation</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-times-circle text-danger fa-4x mb-3"></i>
                    <h5 class="fw-bold">Are you sure?</h5>
                </div>
                <p class="text-center text-muted px-3">
                    This will cancel your booking for <strong>@Model.Package.PackageName</strong>.
                </p>
                <div class="alert alert-warning small">
                    <ul class="mb-0 ps-3">
                        <li>This action <strong>cannot</strong> be undone.</li>
                        <li>Refunds (if eligible) will be processed to your original payment method via Stripe.</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Keep Booking</button>

                <form asp-action="CancelBooking" asp-controller="Payment" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="bookingId" value="@Model.BookingID" />
                    <button type="submit" class="btn btn-danger fw-bold">Yes, Cancel Booking</button>
                </form>
            </div>
        </div>
    </div>
</div>