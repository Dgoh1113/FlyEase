@model FlyEase.Data.Booking

@{
    ViewData["Title"] = "Rate Your Trip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* 1. Page Background (Overrides default layout) */
    body {
        background: linear-gradient(135deg, #120C34 0%, #2A1B5E 50%, #4B2C85 100%) !important;
        background-attachment: fixed;
        min-height: 100vh;
        color: #fff; /* Default text white for outside card */
    }

    /* 2. Main Container */
    .review-container {
        max-width: 850px;
        margin: 60px auto;
        font-family: 'Poppins', sans-serif;
    }

    /* 3. The Review Card (Glassmorphism Effect) */
    .review-form-card {
        background: rgba(255, 255, 255, 0.98); /* Slightly transparent white */
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        color: #333; /* Text inside card is dark */
        position: relative;
        overflow: hidden;
    }

        /* Decorative Top Bar */
        .review-form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(90deg, #FFC107, #FF5722);
        }

    /* 4. Header Section */
    .review-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .rating-big {
        font-size: 4.5rem;
        font-weight: 800;
        color: #2A1B5E; /* Deep Purple */
        line-height: 1;
    }

    .rating-stars-gold {
        color: #FFC107;
        font-size: 1.5rem;
        margin-bottom: 10px;
        text-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    /* 5. Star Rating Input (Interactive) */
    .star-rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: center; /* Centered */
        gap: 10px;
        margin: 20px 0;
    }

        .star-rating-input input {
            display: none;
        }

        .star-rating-input label {
            font-size: 2.5rem;
            color: #e0e0e0;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            /* Hover & Checked Logic */
            .star-rating-input input:checked ~ label,
            .star-rating-input label:hover,
            .star-rating-input label:hover ~ label {
                color: #FFC107;
                transform: scale(1.1);
            }

    /* 6. Form Elements */
    .form-label {
        font-weight: 600;
        color: #2A1B5E;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-custom {
        width: 100%;
        padding: 15px;
        border: 2px solid #f0f0f0;
        border-radius: 16px;
        font-size: 1rem;
        transition: 0.3s;
        background: #fdfdfd;
    }

        .form-control-custom:focus {
            border-color: #4B2C85; /* Purple Focus */
            box-shadow: 0 0 0 4px rgba(75, 44, 133, 0.1);
            outline: none;
        }

    /* 7. Buttons */
    .btn-submit-review {
        background: linear-gradient(135deg, #2A1B5E 0%, #4B2C85 100%);
        color: white;
        padding: 15px 40px;
        border: none;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        width: 100%;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 10px 20px rgba(42, 27, 94, 0.3);
        margin-top: 20px;
    }

        .btn-submit-review:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(42, 27, 94, 0.4);
        }

    /* 8. Package Info Box */
    .package-info-box {
        background: #F4F6F9;
        border-radius: 16px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        border-left: 5px solid #2A1B5E;
    }

    .package-icon {
        width: 50px;
        height: 50px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #2A1B5E;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
</style>

<div class="container">
    <div class="review-container">

        <div class="text-center mb-4">
            <h1 class="fw-bold text-white">How was your trip?</h1>
            <p class="text-white-50">Share your experience to help us improve.</p>
        </div>

        <div class="review-form-card">

            <div class="review-header">
                <div class="rating-big">5.0</div>
                <div class="rating-stars-gold">★★★★★</div>
                <p class="text-muted small">Average Package Rating</p>
            </div>

            <div class="package-info-box">
                <div class="package-icon">
                    <i class="fas fa-plane-departure"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-1" style="color: #2A1B5E;">@Model.Package.PackageName</h5>
                    <p class="text-muted mb-0 small">
                        <i class="far fa-calendar-alt me-1"></i> Travel Date: @Model.TravelDate.ToString("dd MMM yyyy")
                    </p>
                </div>
            </div>

            <form asp-action="Create" method="post" id="reviewForm">
                <input type="hidden" name="bookingId" value="@Model.BookingID" />

                <div class="mb-4 text-center">
                    <label class="form-label" style="font-size: 1.1rem;">Tap stars to rate</label>
                    <div class="star-rating-input">
                        <input type="radio" id="star5" name="rating" value="5"><label for="star5" title="Excellent">★</label>
                        <input type="radio" id="star4" name="rating" value="4"><label for="star4" title="Good">★</label>
                        <input type="radio" id="star3" name="rating" value="3"><label for="star3" title="Average">★</label>
                        <input type="radio" id="star2" name="rating" value="2"><label for="star2" title="Poor">★</label>
                        <input type="radio" id="star1" name="rating" value="1"><label for="star1" title="Terrible">★</label>
                    </div>
                    <div id="ratingError" class="text-danger fw-bold small" style="display:none;">
                        <i class="fas fa-exclamation-circle me-1"></i> Please select a star rating.
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Write your review</label>
                    <textarea name="comment" id="commentBox" class="form-control-custom" rows="5" placeholder="What was the highlight of your trip? (Minimum 10 characters)" required></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">Reviewer Name</label>
                        <input type="text" class="form-control-custom bg-light text-muted" value="@(Model.User?.FullName)" readonly />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted small">Email Address</label>
                        <input type="email" class="form-control-custom bg-light text-muted" value="@(Model.User?.Email)" readonly />
                    </div>
                </div>

                <button type="button" onclick="submitReview()" class="btn-submit-review">
                    Submit Review <i class="fas fa-paper-plane ms-2"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function submitReview() {
        var ratingInput = document.querySelector('input[name="rating"]:checked');
        var errorMsg = document.getElementById('ratingError');
        var commentBox = document.getElementById('commentBox');

        // Validation
        if (!ratingInput) {
            errorMsg.style.display = 'block';
            // Shake animation for emphasis
            document.querySelector('.star-rating-input').style.animation = "shake 0.5s";
            setTimeout(() => document.querySelector('.star-rating-input').style.animation = "", 500);
            return;
        } else {
            errorMsg.style.display = 'none';
        }

        if (commentBox.value.trim().length < 2) {
            alert("Please write a short comment about your experience.");
            return;
        }

        document.getElementById('reviewForm').submit();
    }
</script>

<style>
    /* Shake Animation for Error */
    @@keyframes shake {
        0% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-10px);
        }

        50% {
            transform: translateX(10px);
        }

        75% {
            transform: translateX(-10px);
        }

        100% {
            transform: translateX(0);
        }
    }
</style>