@using System.Text.Json
@model IEnumerable<FlyEase.Data.Package>

@{
    ViewData["Title"] = "All Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Package Card Styling */
    .package-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        background: #fff;
    }

        .package-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .package-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .price-tag {
        font-size: 1.1rem;
        font-weight: bold;
        color: #0d6efd;
    }
</style>

<div class="hero-banner">
    <div class="container">
        <h1>Explore All Packages</h1>
        <p>Find your next adventure</p>
    </div>
</div>

<div class="container mt-4 mb-5">
    <div class="search-container-custom p-4 rounded">
        <form asp-action="Packages" method="get" class="row g-3 align-items-center">

            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control form-control-custom"
                       placeholder="Search destinations..." value="@ViewBag.SearchTerm">
            </div>

            <div class="col-md-3">
                <select name="categoryId" class="form-select form-select-custom">
                    <option value="">All Categories</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            bool selected = ViewBag.CategoryId != null && (int)ViewBag.CategoryId == cat.CategoryID;
                            <option value="@cat.CategoryID" selected="@selected">@cat.CategoryName</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-text input-group-text-custom">RM</span>
                    <input type="number" name="maxPrice" class="form-control form-control-custom"
                           placeholder="Max Budget" value="@ViewBag.MaxPrice">
                </div>
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn w-100 fw-bold text-white" style="background-color: #7367f0;">
                    Filter
                </button>
            </div>

        </form>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No packages found matching your criteria.</div>
        <div class="text-center mt-3">
            <a asp-action="Packages" class="btn btn-outline-secondary">Clear All Filters</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var pkg in Model)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    @{
                        var firstImg = pkg.ImageURL?.Split(';').FirstOrDefault() ?? "/img/default-package.jpg";

                        // 1. Serialize Itinerary
                        var itineraryJson = JsonSerializer.Serialize(pkg.Itinerary
                        .OrderBy(i => i.DayNumber)
                        .Select(i => new { i.DayNumber, i.Title, i.ActivityDescription }));

                        // 2. FIXED: Serialize Package Name safely
                        var packageNameJson = JsonSerializer.Serialize(pkg.PackageName);
                    }

                    <div class="card h-100 shadow-sm package-card">
                        <div class="position-relative">
                            <img src="@firstImg" class="card-img-top package-img-top" alt="@pkg.PackageName">
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star me-1"></i>@(pkg.AverageRating > 0 ? pkg.AverageRating.ToString("0.0") : "New")
                                </span>
                            </div>
                        </div>

                        <div class="card-body p-3">
                            <h5 class="card-title text-truncate" title="@pkg.PackageName">@pkg.PackageName</h5>
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-1 text-danger"></i>@pkg.Destination
                                <a href="https://www.google.com/maps/search/?api=1&query=@pkg.Latitude,@pkg.Longitude" target="_blank" class="ms-1 text-primary text-decoration-none" title="View on Google Maps">(Map)</a>
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price-tag">RM @pkg.Price.ToString("N0")</span>
                                    <small class="text-muted">@pkg.AvailableSlots slots</small>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="button" class="btn btn-outline-info btn-sm" onclick='showItineraryModal(@Html.Raw(itineraryJson), @Html.Raw(packageNameJson))'>
                                        <i class="fas fa-list-ul"></i> Itinerary
                                    </button>

                                    <div class="d-flex gap-2">
                                        <a href="/Payment/CustomerInfo?packageId=@pkg.PackageID" class="btn btn-primary btn-sm flex-grow-1">Book Now</a>
                                        <a asp-route-id="@pkg.PackageID" asp-action="PackageDetails" asp-controller="PackageDetails" class="btn btn-outline-secondary btn-sm">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="modal fade" id="itineraryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="itineraryModalTitle">Trip Schedule</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body bg-light" id="itineraryModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showItineraryModal(data, packageName) {
        document.getElementById('itineraryModalTitle').innerText = "Itinerary for " + packageName;
        const container = document.getElementById('itineraryModalBody');
        container.innerHTML = "";

        if (!data || data.length === 0) {
            container.innerHTML = '<p class="text-center text-muted p-3">No detailed itinerary available.</p>';
        } else {
            let html = '<div class="timeline p-2">';
            data.forEach(day => {
                html += `
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge bg-primary rounded-pill me-2">Day ${day.DayNumber}</span>
                            <h5 class="card-title mb-0 text-dark">${day.Title}</h5>
                        </div>
                        <p class="card-text text-muted ms-1">${day.ActivityDescription}</p>
                    </div>
                </div>`;
            });
            html += '</div>';
            container.innerHTML = html;
        }
        new bootstrap.Modal(document.getElementById('itineraryModal')).show();
    }
</script>