@using System.Text.Json
@using X.PagedList.Mvc.Core 
@using X.PagedList

@model IPagedList<FlyEase.Data.Package>

@{
    ViewData["Title"] = "All Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Package Card Styling */
    .package-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        background: #fff;
    }

    .package-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .package-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .price-tag {
        font-size: 1.1rem;
        font-weight: bold;
        color: #0d6efd;
    }

    /* COMPACT FILTER STYLING */
    .search-container-custom {
        background-color: #f8f9fa;
        padding: 12px !important;
        border-radius: 8px;
    }
    
    .form-control-sm, .form-select-sm, .btn-sm {
        height: 32px;
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
        font-size: 0.85rem;
        line-height: 1.5;
    }

    .btn-sm {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* PAGINATION STYLING */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }
    .pagination {
        margin-bottom: 0;
    }
    .page-item.active .page-link {
        background-color: #7367f0;
        border-color: #7367f0;
    }
    .page-link {
        color: #7367f0;
    }
    .page-link:hover {
        color: #5e54c9;
    }
</style>

<div class="hero-banner">
    <div class="container">
        <h1>Explore All Packages</h1>
        <p>Find your next adventure</p>
    </div>
</div>

<div class="container mt-4 mb-5">
    <div class="search-container-custom shadow-sm">
        <form asp-action="Packages" method="get" class="row gx-2 gy-2 align-items-center">

            <div class="col-md-2 col-12">
                <input type="text" name="searchTerm" class="form-control form-control-sm"
                       placeholder="Search name..." value="@ViewBag.SearchTerm">
            </div>

            <div class="col-md-2 col-6">
                <input class="form-control form-control-sm" 
                       list="destinationOptions" 
                       name="destination" 
                       id="destinationInput" 
                       placeholder="Country" 
                       value="@ViewBag.Destination">
                <datalist id="destinationOptions">
                    @if (ViewBag.Destinations != null)
                    {
                        foreach (var dest in ViewBag.Destinations)
                        {
                            <option value="@dest"></option>
                        }
                    }
                </datalist>
            </div>

            <div class="col-md-2 col-6">
                <select name="categoryId" class="form-select form-select-sm">
                    <option value="">Category</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            bool selected = ViewBag.CategoryId != null && (int)ViewBag.CategoryId == cat.CategoryID;
                            <option value="@cat.CategoryID" selected="@selected">@cat.CategoryName</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-1 col-6">
                <input type="number" name="maxPrice" class="form-control form-control-sm"
                       placeholder="Max RM" value="@ViewBag.MaxPrice">
            </div>

            <div class="col-md-1 col-6">
                <input type="date" name="startDate" class="form-control form-control-sm"
                       placeholder="Start" aria-label="Start Date" value="@ViewBag.StartDate" title="Start Date">
            </div>

            <div class="col-md-1 col-6">
                <input type="date" name="endDate" class="form-control form-control-sm"
                       placeholder="End" aria-label="End Date" value="@ViewBag.EndDate" title="End Date">
            </div>

            <div class="col-md-1 col-6">
                <button type="submit" class="btn btn-sm w-100 fw-bold text-white" style="background-color: #7367f0;">
                    <i class="fas fa-filter me-1"></i> Go
                </button>
            </div>

            <div class="col-md-1 col-6">
                <a asp-action="Packages" class="btn btn-secondary btn-sm w-100">
                    <i class="fas fa-undo me-1"></i> Reset
                </a>
            </div>

        </form>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No packages found matching your criteria.</div>
        <div class="text-center mt-3">
            <a asp-action="Packages" class="btn btn-outline-secondary">Clear All Filters</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var pkg in Model)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    @{
                        var firstImg = pkg.ImageURL?.Split(';').FirstOrDefault() ?? "/img/default-package.jpg";
                    }
                    
                    <div class="card h-100 shadow-sm package-card">
                        
                        <div class="position-relative">
                            @* --- FIXED: Clickable Image --- *@
                            <a asp-controller="PackageDetails" asp-action="PackageDetails" asp-route-id="@pkg.PackageID">
                                <img src="@firstImg" class="card-img-top package-img-top" alt="@pkg.PackageName">
                            </a>

                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-star me-1"></i>@(pkg.AverageRating > 0 ? pkg.AverageRating.ToString("0.0") : "New")
                                </span>
                            </div>
                        </div>

                        <div class="card-body p-3 d-flex flex-column">
                            @* --- FIXED: Clickable Title --- *@
                            <a asp-controller="PackageDetails" asp-action="PackageDetails" asp-route-id="@pkg.PackageID" class="text-decoration-none text-dark">
                                <h5 class="card-title text-truncate" title="@pkg.PackageName">@pkg.PackageName</h5>
                            </a>
                            
                            <div class="card-meta mb-2">
                                <small class="text-muted d-block text-truncate">
                                    <i class="fas fa-map-marker-alt text-danger me-1"></i>@pkg.Destination
                                    <a href="https://www.google.com/maps/search/?api=1&query=@pkg.Latitude,@pkg.Longitude" target="_blank" class="ms-1 text-primary text-decoration-none" title="View on Google Maps">(Map)</a>
                                </small>
                                <small class="text-secondary d-block mt-1">
                                    <i class="far fa-clock text-primary me-1"></i>
                                    @((pkg.EndDate - pkg.StartDate).Days + 1) Days (@pkg.StartDate.ToString("dd MMM") - @pkg.EndDate.ToString("dd MMM"))
                                </small>
                            </div>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price-tag">RM @pkg.Price.ToString("N0")</span>
                                    <small class="text-muted">@pkg.AvailableSlots slots</small>
                                </div>

                                <div class="d-grid gap-2">
                                    @* --- Buttons --- *@
                                    <button type="button" class="btn btn-primary w-100 py-3 fw-bold" data-bs-toggle="modal" data-bs-target="#itineraryModal_@pkg.PackageID">
                                        <i class="fas fa-list-ol me-2"></i>Show Itinerary
                                    </button>

                                    <div class="d-flex gap-2">
                                        <a asp-route-id="@pkg.PackageID" asp-action="PackageDetails" asp-controller="PackageDetails" class="btn btn-primary btn-sm flex-grow-1">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* --- Unique Itinerary Modal --- *@
                    <div class="modal fade" id="itineraryModal_@pkg.PackageID" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title">Trip Itinerary: @pkg.PackageName</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body bg-light">
                                    @if (pkg.Itinerary != null && pkg.Itinerary.Count > 0)
                                    {
                                        <div class="timeline p-2">
                                            @foreach (var day in pkg.Itinerary.OrderBy(i => i.DayNumber))
                                            {
                                                <div class="card mb-3 border-0 shadow-sm">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center mb-2">
                                                            <span class="badge bg-primary rounded-pill me-2">Day @day.DayNumber</span>
                                                            <h5 class="card-title mb-0 text-dark">@day.Title</h5>
                                                        </div>
                                                        <p class="card-text text-muted ms-1">@day.ActivityDescription</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center p-4">
                                            <p class="text-muted">No specific itinerary details available for this package.</p>
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="pagination-container">
            @Html.PagedListPager(Model, page => Url.Action("Packages", new { 
                page, 
                searchTerm = ViewBag.SearchTerm, 
                destination = ViewBag.Destination,
                categoryId = ViewBag.CategoryId,
                maxPrice = ViewBag.MaxPrice,
                startDate = ViewBag.StartDate,
                endDate = ViewBag.EndDate
            }), new PagedListRenderOptions {
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                UlElementClasses = new[] { "pagination" },
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                DisplayLinkToNextPage = PagedListDisplayMode.Always
            })
        </div>
    }
</div>