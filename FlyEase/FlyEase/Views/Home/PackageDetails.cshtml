<!-- [file name]: Views/Home/PackageDetails.cshtml -->
@model FlyEase.Data.Package
@{
    ViewData["Title"] = Model.PackageName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <img src="@(Model.ImageURL ?? "https://images.unsplash.com/photo-1505761671935-60b3a7427bad")"
                 class="img-fluid rounded" alt="@Model.PackageName">

            <h1 class="mt-3">@Model.PackageName</h1>
            <p class="lead">@Model.Description</p>

            <!-- Package details content -->
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-primary">RM @Model.Price.ToString("N0")</h4>
                    <p class="text-muted">per person</p>

                    <div class="mb-3">
                        <p><i class="fas fa-map-marker-alt me-2"></i>@Model.Destination</p>
                        <p><i class="fas fa-calendar me-2"></i>@((Model.EndDate - Model.StartDate).Days) Days</p>
                        <p><i class="fas fa-users me-2"></i>@Model.AvailableSlots slots available</p>
                    </div>

                    <!-- ADD LARGE BOOK NOW BUTTON HERE -->
                    <a asp-controller="Payment" asp-action="CustomerInfo"
                       asp-route-packageId="@Model.PackageID"
                       asp-route-people="1"
                       class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-calendar-check me-2"></i>Book Now
                    </a>

                    <div class="text-center mt-2">
                        <small class="text-muted">Free cancellation up to 7 days before travel</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
