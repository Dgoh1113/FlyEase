@model FlyEase.ViewModels.PackageManagementViewModel

@if (Model.Packages != null && Model.Packages.Any())
{
    <div class="packages-grid-content">
        @foreach (var package in Model.Packages)
        {
            var firstImage = !string.IsNullOrEmpty(package.ImageURL) ? package.ImageURL.Split(';', StringSplitOptions.RemoveEmptyEntries).FirstOrDefault() : "/img/default-package.jpg";
            var bookingCount = package.Bookings?.Count(b => b.BookingStatus != "Cancelled") ?? 0;

            <div class="package-management-card">

                <div class="package-image">
                    <a asp-controller="PackageDetails"
                       asp-action="PackageDetails"
                       asp-route-id="@package.PackageID"
                       title="View Package Details">
                        <img src="@firstImage"
                             alt="@package.PackageName"
                             onerror="this.src='/img/default-package.jpg'"
                             style="cursor: pointer;" />
                    </a>
                </div>
                <div class="package-content">
                    <div class="content-body">
                        <h4>@package.PackageName</h4>
                        <div class="package-category"><strong>Category:</strong> @package.Category?.CategoryName</div>
                        <div class="package-price">$@package.Price.ToString("N2")</div>
                        @if (bookingCount > 0)
                        {
                            <span class="badge bg-warning text-dark mt-1">@bookingCount Active Booking(s)</span>
                        }
                    </div>

                    <div class="package-card-footer border-top pt-3 mt-3 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="editPackage(@package.PackageID)" title="Edit">
                            <i class="fas fa-edit"></i>
                        </button>

                        <form id="delete-form-@package.PackageID" method="post" action="@Url.Action("Delete", "PackageManagement", new { id = package.PackageID })" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@package.PackageID, @bookingCount)" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="pagination-nav mt-4">
            <ul class="pagination-list">
                <li>
                    <button onclick="loadPage(@(Model.CurrentPage - 1))"
                            class="page-link rounded-start @(Model.CurrentPage == 1 ? "disabled" : "")"
                            @(Model.CurrentPage == 1 ? "disabled" : "")>
                        <span class="sr-only">Previous</span>
                        <svg class="w-4 h-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 19-7-7 7-7" /></svg>
                    </button>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li>
                        <button onclick="loadPage(@i)"
                                class="page-link @(i == Model.CurrentPage ? "active" : "")">
                            @i
                        </button>
                    </li>
                }
                <li>
                    <button onclick="loadPage(@(Model.CurrentPage + 1))"
                            class="page-link rounded-end @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                            @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>
                        <span class="sr-only">Next</span>
                        <svg class="w-4 h-4 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7" /></svg>
                    </button>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="empty-state"><h4>No Packages Found</h4></div>
}