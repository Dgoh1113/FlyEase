@model FlyEase.ViewModels.CustomerInsightReportVM
@{
    ViewData["Title"] = "Customer Insight Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/report.css" />
<script src="~/js/report.js"></script>

<div class="container-fluid py-4">

    <partial name="_ReportNavigation" />

    <div class="d-flex justify-content-end mb-3 no-print">
        <div class="btn-group shadow-sm">
            <a asp-action="ExportCustomerExcel"
               asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
               asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
               asp-route-sortBy="@Model.SortBy"
               class="btn btn-success">
                <i class="fas fa-file-excel me-2"></i> Export Excel
            </a>
            <button onclick="window.print()" class="btn btn-dark">
                <i class="fas fa-print me-2"></i> Print / PDF
            </button>
        </div>
    </div>

    <div class="report-header text-center">
        <h1>FlyEase Customer Ledger</h1>
        <p>Generated on: @Model.GeneratedAt.ToString("dd MMM yyyy HH:mm") | By: @Model.GeneratedBy</p>
        <p><strong>Period:</strong> @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</p>
    </div>

    <div class="card shadow-sm mb-4 no-print">
        <div class="card-body bg-light">
            <form method="get" asp-action="CustomerInsightReport" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label fw-bold small">From</label>
                    <input type="date" class="form-control form-control-sm" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small">To</label>
                    <input type="date" class="form-control form-control-sm" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold small">Sort By</label>
                    <select class="form-select form-select-sm" name="sortBy">
                        <option value="Spending" selected="@(Model.SortBy == "Spending")">Highest Spending</option>
                        <option value="Frequency" selected="@(Model.SortBy == "Frequency")">Most Frequent</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        <i class="fas fa-filter me-1"></i> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3 col-6">
            <div class="card bg-primary text-white h-100">
                <div class="card-body py-3">
                    <h6 class="opacity-75">Active Customers</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalCustomers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white border-primary text-primary h-100 shadow-sm">
                <div class="card-body py-3">
                    <h6 class="text-muted">Avg Spend/Pax</h6>
                    <h3 class="fw-bold mb-0">RM @Model.AverageSpendingPerCustomer.ToString("N0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white h-100 shadow-sm">
                <div class="card-body py-3 border-start border-4 border-success">
                    <h6 class="text-muted">Total Revenue</h6>
                    <h4 class="fw-bold mb-0 text-success">RM @Model.TotalRevenue.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white h-100 shadow-sm">
                <div class="card-body py-3 border-start border-4 border-info">
                    <h6 class="text-muted">Recent Active</h6>
                    <h4 class="fw-bold mb-0 text-info">@Model.ActiveCustomers</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 fw-bold">Top 5 Highest Spending Customers</h5>
        </div>
        <div class="card-body">
            <div style="height: 300px;">
                <canvas id="revenueChart"
                        data-labels='@Html.Raw(Json.Serialize(Model.ChartLabels))'
                        data-values='@Html.Raw(Json.Serialize(Model.ChartValues))'>
                </canvas>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 fw-bold">Customer Ledger</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0" id="customerTable">
                <thead class="table-light text-uppercase small fw-bold">
                    <tr>
                        <th>Customer</th>
                        <th>Contact</th>
                        <th>Tier</th>
                        <th class="text-center">Bookings</th>
                        <th class="text-end">Total Spent</th>
                        <th class="text-end">Avg/Booking</th>
                        <th>Last Seen</th>
                        <th class="text-center">Rating</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Details.Any())
                    {
                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.CustomerName</div>
                                    <div class="small text-muted">ID: @item.UserID</div>
                                </td>
                                <td>
                                    <div class="small"><i class="fas fa-envelope me-1 text-muted"></i> @item.Email</div>
                                    <div class="small"><i class="fas fa-phone me-1 text-muted"></i> @item.Phone</div>
                                </td>
                                <td>
                                    @if (item.CustomerTier == "VIP")
                                    {
                                        <span class="badge bg-warning text-dark border border-warning"><i class="fas fa-crown me-1"></i> VIP</span>
                                    }
                                    else if (item.CustomerTier == "Premium")
                                    {

                                        <span class="badge bg-info text-dark border border-info">Premium</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-light text-dark border">@item.CustomerTier</span>
                                    }
                                </td>
                                <td class="text-center fw-bold">@item.TotalBookings</td>
                                <td class="text-end fw-bold text-success">RM @item.TotalSpent.ToString("N0")</td>
                                <td class="text-end text-muted small">RM @item.AverageSpentPerBooking.ToString("N0")</td>
                                <td class="small">@item.LastBookingDate.ToString("dd MMM yyyy")</td>
                                <td class="text-center">
                                    @if (item.ReviewsGiven > 0)
                                    {
                                        <span class="text-warning fw-bold">@item.AverageRating.ToString("N1")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="fas fa-users fa-3x mb-3 opacity-50"></i>
                                <p>No active customers found for this period.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>