@model FlyEase.ViewModels.CustomerInsightReportVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer Insight Report</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/report.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .charts-row {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            page-break-inside: avoid;
        }

        .chart-half {
            flex: 1;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 15px;
            background: #fff;
        }

        .chart-container-sm {
            height: 250px;
            width: 100%;
            position: relative;
        }
    </style>
</head>
<body class="printed-report-body">

    <div class="no-print-bar">
        <button onclick="window.print()" class="btn btn-primary">Print Now</button>
        <button onclick="window.close()" class="btn btn-secondary">Close</button>
    </div>

    <div class="print-container">
        <div class="print-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="company-title">FlyEase</h1>
                    <h3 class="report-title">Customer Insight Report</h3>
                </div>
                <div class="text-end report-meta">
                    <p><strong>Generated By:</strong> @Model.GeneratedBy</p>
                    <p><strong>Date:</strong> @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
                    <p class="period-badge">
                        Period: @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>
            <hr class="header-line" />
        </div>

        <div class="summary-cards-row">
            <div class="summary-card">
                <div class="card-label">Total Customers</div>
                <div class="card-value">@Model.TotalCustomers</div>
            </div>
            <div class="summary-card">
                <div class="card-label">Total Bookings</div>
                <div class="card-value">@Model.TotalBookings</div>
            </div>
            <div class="summary-card">
                <div class="card-label">Top Spender</div>
                <div class="card-value" style="font-size: 16px; line-height: 1.2; margin-top:8px;">
                    @Model.TopCustomerName
                    <div style="font-size:12px; color:#8898aa; font-weight:normal;">(RM @Model.TopCustomerValue.ToString("N0"))</div>
                </div>
            </div>
            <div class="summary-card highlight">
                <div class="card-label">Total Revenue</div>
                <div class="card-value">RM @Model.TotalRevenue.ToString("N2")</div>
            </div>
        </div>

        <div class="charts-row">
            <div class="chart-half">
                <h6 class="text-center text-uppercase text-muted fw-bold mb-3 small">Top 5 by Spending (RM)</h6>
                <div class="chart-container-sm">
                    <canvas id="spendingChart"></canvas>
                </div>
            </div>
            <div class="chart-half">
                <h6 class="text-center text-uppercase text-muted fw-bold mb-3 small">Top 5 by Bookings</h6>
                <div class="chart-container-sm">
                    <canvas id="freqChart"></canvas>
                </div>
            </div>
        </div>

        <div class="table-section">
            <h5 class="section-title">Detailed Customer Ledger (@(Model.SortBy == "Frequency" ? "Sorted by Frequency" : "Sorted by Spending"))</h5>
            <table class="table table-bordered table-sm print-table">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th class="text-end">Last Booking</th>
                        <th class="text-end">Bookings</th>
                        <th class="text-end">Spent (RM)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td class="text-end">@(item.LastBookingDate.HasValue? item.LastBookingDate.Value.ToString("dd/MM/yy") : "-")</td>
                            <td class="text-end">@item.TotalBookings</td>
                            <td class="text-end">@item.TotalSpent.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end fw-bold">GRAND TOTAL</td>
                        <td class="text-end fw-bold">@Model.TotalBookings</td>
                        <td class="text-end fw-bold">RM @Model.TotalRevenue.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // --- Chart 1: Spending ---
            var ctxSpend = document.getElementById('spendingChart');
            var spendLabels = @Html.Raw(Json.Serialize(Model.SpendingChartLabels));
            var spendValues = @Html.Raw(Json.Serialize(Model.SpendingChartValues));

            if (ctxSpend && spendLabels) {
                new Chart(ctxSpend, {
                    type: 'bar',
                    data: {
                        labels: spendLabels,
                        datasets: [{
                            label: 'Spent (RM)',
                            data: spendValues,
                            backgroundColor: 'rgba(94, 114, 228, 0.7)',
                            borderColor: '#5e72e4',
                            borderWidth: 1,
                            borderRadius: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        animation: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true, ticks: { font: { size: 9 } } }, x: { ticks: { font: { size: 9 } } } }
                    }
                });
            }

            // --- Chart 2: Frequency ---
            var ctxFreq = document.getElementById('freqChart');
            var freqLabels = @Html.Raw(Json.Serialize(Model.FrequencyChartLabels));
            var freqValues = @Html.Raw(Json.Serialize(Model.FrequencyChartValues));

            if (ctxFreq && freqLabels) {
                new Chart(ctxFreq, {
                    type: 'bar',
                    data: {
                        labels: freqLabels,
                        datasets: [{
                            label: 'Bookings',
                            data: freqValues,
                            backgroundColor: 'rgba(251, 99, 64, 0.7)',
                            borderColor: '#fb6340',
                            borderWidth: 1,
                            borderRadius: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        animation: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true, ticks: { font: { size: 9 } } }, x: { ticks: { font: { size: 9 } } } }
                    }
                });
            }

            // Auto Print
            setTimeout(function() { window.print(); }, 800);
        });
    </script>
</body>
</html>