@model FlyEase.ViewModels.SalesReportVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FlyEase Printed Report</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/report.css" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="printed-report-body">

    <div class="no-print-bar">
        <button onclick="window.print()" class="btn btn-primary">Print Now</button>
        <button onclick="window.close()" class="btn btn-secondary">Close</button>
    </div>

    <div class="print-container">
        <div class="print-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="company-title">FlyEase</h1>
                    <h3 class="report-title">Sales Report</h3>
                </div>
                <div class="text-end report-meta">
                    <p><strong>Generated By:</strong> @Model.GeneratedBy</p>
                    <p><strong>Date:</strong> @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
                    <p class="period-badge">
                        Period: @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>
            <hr class="header-line" />
        </div>

        <div class="summary-cards-row">
            <div class="summary-card">
                <div class="card-label">Total Orders</div>
                <div class="card-value">@Model.GrandTotalOrders</div>
            </div>
            <div class="summary-card">
                <div class="card-label">Total Quantity</div>
                <div class="card-value">@Model.GrandTotalPax</div>
            </div>
            <div class="summary-card highlight">
                <div class="card-label">Total Revenue</div>
                <div class="card-value">RM @Model.GrandTotalRevenue.ToString("N2")</div>
            </div>
        </div>

        <div class="chart-section">
            <h5 class="section-title">Package Sales Distribution</h5>
            <div class="chart-container">
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <div class="table-section">
            <h5 class="section-title">Transaction Ledger</h5>
            <table class="table table-bordered table-sm print-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>ID</th>
                        <th>Customer</th>
                        <th>Package</th>
                        <th class="text-end">Qty</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>@item.BookingDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.TransactionID</td>
                            <td>@item.CustomerName</td>
                            <td>@item.PackageName</td>
                            <td class="text-end">@item.Pax</td>
                            <td class="text-end">@item.Amount.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end fw-bold">GRAND TOTAL</td>
                        <td class="text-end fw-bold">@Model.GrandTotalPax</td>
                        <td class="text-end fw-bold">RM @Model.GrandTotalRevenue.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <input type="hidden" id="chartLabels" value="@string.Join(",", Model.ChartLabels)" />
    <input type="hidden" id="chartValues" value="@string.Join(",", Model.ChartValues)" />

    <script src="~/js/report.js"></script>
</body>
</html>