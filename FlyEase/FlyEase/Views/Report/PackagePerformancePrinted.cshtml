@model FlyEase.ViewModels.PackagePerformanceReportVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Package Performance Report</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/report.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Two-Column Layout for Charts */
        .charts-row {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            page-break-inside: avoid;
        }

        .chart-half {
            flex: 1;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 15px;
            background: #fff;
        }

        .chart-container-sm {
            height: 250px; /* Compact height for print */
            width: 100%;
            position: relative;
        }
    </style>
</head>
<body class="printed-report-body">

    <div class="no-print-bar">
        <button onclick="window.print()" class="btn btn-primary">Print Now</button>
        <button onclick="window.close()" class="btn btn-secondary">Close</button>
    </div>

    <div class="print-container">
        <div class="print-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="company-title">FlyEase</h1>
                    <h3 class="report-title">Package Performance Report</h3>
                </div>
                <div class="text-end report-meta">
                    <p><strong>Generated By:</strong> @Model.GeneratedBy</p>
                    <p><strong>Date:</strong> @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
                    <p class="period-badge">
                        Period: @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>
            <hr class="header-line" />
        </div>

        <div class="summary-cards-row">
            <div class="summary-card">
                <div class="card-label">Active Packages</div>
                <div class="card-value">@Model.Details.Count</div>
            </div>
            <div class="summary-card">
                <div class="card-label">Total Pax Sold</div>
                <div class="card-value">@Model.TotalPackagesSold</div>
            </div>
            <div class="summary-card">
                <div class="card-label">Most Sold Package</div>
                <div class="card-value" style="font-size: 16px; line-height: 1.2; margin-top:8px;">
                    @Model.TopPackageName
                    <div style="font-size:12px; color:#8898aa; font-weight:normal;">(@Model.TopPackageCount Pax)</div>
                </div>
            </div>
            <div class="summary-card highlight">
                <div class="card-label">Total Revenue</div>
                <div class="card-value">RM @Model.TotalRevenue.ToString("N2")</div>
            </div>
        </div>

        <div class="charts-row">
            <div class="chart-half">
                <h6 class="text-center text-uppercase text-muted fw-bold mb-3 small">Top 5 by Revenue (RM)</h6>
                <div class="chart-container-sm">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
            <div class="chart-half">
                <h6 class="text-center text-uppercase text-muted fw-bold mb-3 small">Top 5 by Volume (Pax)</h6>
                <div class="chart-container-sm">
                    <canvas id="paxChart"></canvas>
                </div>
            </div>
        </div>

        <div class="table-section">
            <h5 class="section-title">Detailed Performance List (@(Model.SortBy == "Volume" ? "Sorted by Volume" : "Sorted by Revenue"))</h5>
            <table class="table table-bordered table-sm print-table">
                <thead>
                    <tr>
                        <th>Package Name</th>
                        <th>Category</th>
                        <th class="text-end">Pax Sold</th>
                        <th class="text-end">Revenue (RM)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>@item.PackageName</td>
                            <td>@item.Category</td>
                            <td class="text-end">@item.TotalPax</td>
                            <td class="text-end">@item.Revenue.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" class="text-end fw-bold">GRAND TOTAL</td>
                        <td class="text-end fw-bold">@Model.TotalPackagesSold</td>
                        <td class="text-end fw-bold">RM @Model.TotalRevenue.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // --- Chart 1: Revenue ---
            var ctxRev = document.getElementById('revenueChart');
            var revLabels = @Html.Raw(Json.Serialize(Model.RevenueChartLabels));
            var revValues = @Html.Raw(Json.Serialize(Model.RevenueChartValues));

            if (ctxRev && revLabels) {
                new Chart(ctxRev, {
                    type: 'bar',
                    data: {
                        labels: revLabels,
                        datasets: [{
                            label: 'Revenue (RM)',
                            data: revValues,
                            backgroundColor: 'rgba(94, 114, 228, 0.7)',
                            borderColor: '#5e72e4',
                            borderWidth: 1,
                            borderRadius: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        animation: false, // Disable for print
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true, ticks: { font: { size: 9 } } },
                            x: { ticks: { font: { size: 9 } } }
                        }
                    }
                });
            }

            // --- Chart 2: Pax ---
            var ctxPax = document.getElementById('paxChart');
            var paxLabels = @Html.Raw(Json.Serialize(Model.PaxChartLabels));
            var paxValues = @Html.Raw(Json.Serialize(Model.PaxChartValues));

            if (ctxPax && paxLabels) {
                new Chart(ctxPax, {
                    type: 'bar',
                    data: {
                        labels: paxLabels,
                        datasets: [{
                            label: 'Pax Sold',
                            data: paxValues,
                            backgroundColor: 'rgba(251, 99, 64, 0.7)', // Orange color
                            borderColor: '#fb6340',
                            borderWidth: 1,
                            borderRadius: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        animation: false, // Disable for print
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true, ticks: { font: { size: 9 } } },
                            x: { ticks: { font: { size: 9 } } }
                        }
                    }
                });
            }

            // Trigger Print Dialog
            setTimeout(function() { window.print(); }, 800);
        });
    </script>
</body>
</html>