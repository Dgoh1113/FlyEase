@model FlyEase.ViewModels.SalesReportVM
@{
    ViewData["Title"] = "Sales Transaction Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/report.css" />

<style>
