        .sidebar, .navbar, .no-print, .btn, form {
            display: none !important;
        }

        .main-content {
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
        }

        .card {
            border: none !important;
            shadow: none !important;
        }

        .report-header {
            display: block !important;
            margin-bottom: 20px;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }

        table {
            width: 100% !important;
            font-size: 10pt;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 5px;
            text-align: left;
        }

        th {
            background-color: #f8f9fa !important;
            -webkit-print-color-adjust: exact;
        }

        .badge {
            border: none;
            background: none;
            color: #000;
            padding: 0;
            font-weight: bold;
        }
    }

    .report-header {
        display: none;
    }

    @@media print {
        .sidebar, .navbar, .no-print, .btn, form {
            display: none !important;
        }

        .main-content {
            margin: 0 !important;
            padding: 0 !important;
            width: 100% !important;
        }

        .card {
            border: none !important;
            shadow: none !important;
        }

        .report-header {
            display: block !important;
            margin-bottom: 20px;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }

        table {
            width: 100% !important;
            font-size: 10pt;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 5px;
            text-align: left;
        }

        th {
            background-color: #f8f9fa !important;
            -webkit-print-color-adjust: exact;
        }

        .badge {
            border: none;
            background: none;
            color: #000;
            padding: 0;
            font-weight: bold;
        }
    }

    .report-header {
        display: none;
    }
</style>

<div class="container-fluid py-4">

    <partial name="_ReportNavigation" />

    <div class="d-flex justify-content-end mb-3 no-print">
        <div class="btn-group">
            <a asp-action="ExportSalesExcel"
               asp-route-startDate="@Model.StartDate.ToString("yyyy-MM-dd")"
               asp-route-endDate="@Model.EndDate.ToString("yyyy-MM-dd")"
               asp-route-dateFilterType="@Model.DateFilterType"
               asp-route-paymentMethodFilter="@Model.PaymentMethodFilter"
               asp-route-bookingStatusFilter="@Model.BookingStatusFilter"
               class="btn btn-success">
                <i class="fas fa-file-excel me-2"></i> Export Excel
            </a>
            <button onclick="window.print()" class="btn btn-dark">
                <i class="fas fa-print me-2"></i> Print / PDF
            </button>
        </div>
    </div>

    <div class="report-header text-center">
        <h1>FlyEase Sales Report</h1>
        <p>Generated on: @Model.GeneratedAt.ToString("dd MMM yyyy HH:mm") | By: @Model.GeneratedBy</p>
        <p><strong>Period:</strong> @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</p>
    </div>

</div>
    <div class="card shadow-sm mb-4 no-print">
        <div class="card-body bg-light">
            <form method="get" asp-action="SalesReport" class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label class="form-label fw-bold small">From</label>
                    <input type="date" class="form-control form-control-sm" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small">To</label>
                    <input type="date" class="form-control form-control-sm" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small">Date Type</label>
                    <select class="form-select form-select-sm" name="dateFilterType">
                        <option value="booking" selected="@(Model.DateFilterType == "booking")">Booking Date</option>
                        <option value="travel" selected="@(Model.DateFilterType == "travel")">Travel Date</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small">Status</label>
                    <select class="form-select form-select-sm" name="bookingStatusFilter">
                        @foreach (var s in Model.AvailableBookingStatuses)
                        {
                            <option value="@s" selected="@(Model.BookingStatusFilter == s)">@s</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-sm w-100">Apply Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3 col-6">
            <div class="card bg-primary text-white h-100">
                <div class="card-body py-3">
                    <h6 class="opacity-75">Total Revenue</h6>
                    <h3 class="fw-bold mb-0">RM @Model.TotalRevenue.ToString("N0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white border-primary text-primary h-100 shadow-sm">
                <div class="card-body py-3">
                    <h6 class="text-muted">Total Transactions</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white h-100 shadow-sm">
                <div class="card-body py-3 border-start border-4 border-success">
                    <h6 class="text-muted">Completed</h6>
                    <h4 class="fw-bold mb-0 text-success">@Model.CompletedBookings</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-white h-100 shadow-sm">
                <div class="card-body py-3 border-start border-4 border-warning">
                    <h6 class="text-muted">Pending</h6>
                    <h4 class="fw-bold mb-0 text-warning">@Model.PendingBookings</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 fw-bold">Transaction Details</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0" id="salesTable">
                <thead class="table-light text-uppercase small fw-bold">
                    <tr>
                        <th>Date</th>
                        <th>Trx ID</th>
                        <th>Customer</th>
                        <th>Package</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th class="text-end">Amount (RM)</th>
                        <th class="text-end">Paid (RM)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Details.Any())
                    {
                        @foreach (var item in Model.Details)
                        {
                            <tr>
                                <td class="small">@item.BookingDate.ToString("dd/MM/yyyy")</td>
                                <td class="small text-muted">@item.TransactionID</td>
                                <td>
                                    <div class="fw-bold">@item.CustomerName</div>
                                    <div class="small text-muted">@item.CustomerEmail</div>
                                </td>
                                <td class="small">@item.PackageName</td>
                                <td>
                                    @if (item.BookingStatus == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (item.BookingStatus == "Pending")
                                    {

                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-danger">@item.BookingStatus</span>
                                    }
                                </td>
                                <td>
                                    <div class="small fw-bold">@item.PaymentMethod</div>
                                    <div class="small text-muted">@item.PaymentStatus</div>
                                </td>
                                <td class="text-end fw-bold">@item.BookingAmount.ToString("N2")</td>
                                <td class="text-end @(item.TotalPaid >= item.BookingAmount ? "text-success" : "text-danger")">
                                    @item.TotalPaid.ToString("N2")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="fas fa-folder-open fa-3x mb-3 opacity-50"></i>
                                <p>No transactions found for this period.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>