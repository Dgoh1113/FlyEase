@model FlyEase.ViewModels.PackageManagementVM
@{
    ViewData["Title"] = "Manage Packages";
    Layout = "~/Views/Shared/_StaffLayout.cshtml"; // <--- CHANGE THIS
}

<div class="container mt-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Packages</h2>
        <a asp-action="CreatePackage" class="btn btn-primary"><i class="fas fa-plus"></i> New Package</a>
    </div>

    <table class="table align-middle table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Slots</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Packages)
            {
                var img = p.ImageURL?.Split(';').FirstOrDefault() ?? "/img/default-package.jpg";
                <tr>
                    <td><img src="@img" width="60" height="40" class="rounded" style="object-fit:cover;"></td>
                    <td>
                        <strong>@p.PackageName</strong><br />
                        <small class="text-muted">@p.Destination</small>
                    </td>
                    <td>RM @p.Price.ToString("N0")</td>
                    <td>@p.AvailableSlots</td>
                    <td>
                        <a asp-action="EditPackage" asp-route-id="@p.PackageID" class="btn btn-sm btn-primary">Edit</a>
                        <form asp-action="DeletePackage" asp-route-id="@p.PackageID" method="post" class="d-inline" onsubmit="return confirm('Delete this package?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>