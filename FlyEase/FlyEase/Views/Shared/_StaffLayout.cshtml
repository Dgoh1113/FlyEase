@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/_stafflayout.css" />

   
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">FlyEase Staff</div>
            <div class="list-group list-group-flush mt-3">

                <a asp-controller="StaffDashboard" asp-action="StaffDashboard"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "StaffDashboard" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>

                <a asp-controller="StaffDashboard" asp-action="Bookings"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Bookings" ? "active" : "")">
                    <i class="fas fa-ticket-alt"></i> Bookings
                </a>

                <a asp-controller="StaffDashboard" asp-action="Packages"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Packages" ? "active" : "")">
                    <i class="fas fa-box-open"></i> Packages
                </a>

                <a asp-controller="StaffDashboard" asp-action="Users"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                    <i class="fas fa-users"></i> Users
                </a>

            </div>

            <div class="mt-auto p-3 border-top border-secondary">
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger w-100">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-4 shadow-sm px-3">
                <span class="navbar-text ms-auto">
                    Welcome, <strong>Staff Member</strong>
                </span>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>