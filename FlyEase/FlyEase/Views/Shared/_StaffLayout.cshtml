<!DOCTYPE html>
<html>
<head>
    <title>Staff Panel - FlyEase</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/staff.css" rel="stylesheet" />
</head>
<body class="staff-mode">
    <div class="staff-wrapper">
        <div class="staff-sidebar">
            <div class="brand">FlyEase Admin</div>
            <nav>
                <a href="/Staff/Dashboard" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
                <a href="/Staff/Bookings" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Bookings" ? "active" : "")">Bookings</a>
                <a href="/Staff/Packages" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Packages" ? "active" : "")">Packages</a>
                <a href="/Auth/Logout">Logout</a>
            </nav>
        </div>
        <div class="staff-content">
            <div class="staff-header">
                <h4>@ViewData["Title"]</h4>
                <span>Hello, @User.Identity.Name</span>
            </div>
            @RenderBody()
        </div>
    </div>
</body>
</html>