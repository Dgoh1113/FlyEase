@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<FlyEase.SharedResource> Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlyEase Travel</title>
    <link rel="stylesheet" href="~/css/_layout.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    @RenderSection("Head", required: false)
</head>
<body>
    <header>
        <h1 asp-controller="Home" asp-action="Index">FlyEase Travel</h1>
        <p>@Localizer["Welcome"]</p>
    </header>

    <nav class="d-flex align-items-center justify-content-center flex-wrap gap-3 p-3">
        <a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
        <a asp-controller="Home" asp-action="Packages">@Localizer["Packages"]</a>

        @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
        {
            <a asp-controller="PackageManagement" asp-action="PackageManagement">@Localizer["ManagePackages"]</a>
        }
        
        <a asp-controller="Discount" asp-action="Discounts">@Localizer["Discounts"]</a>
        <a asp-controller="Home" asp-action="Contact">@Localizer["Contact"]</a>

        <div class="dropdown d-inline-block">
            <a class="text-white text-decoration-none dropdown-toggle" href="#" role="button" id="langDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 14px 16px; display: block;">
                <i class="fas fa-globe me-1"></i> Language
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0" style="min-width: 200px;">
                <li>
                    <form asp-controller="Language" asp-action="SetLanguage" method="post">
                        <input type="hidden" name="culture" value="en" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                            <img src="https://flagcdn.com/w20/us.png" class="me-3 shadow-sm" style="border-radius: 2px;"> 
                            <span>English (EN)</span>
                        </button>
                    </form>
                </li>
                <li>
                    <form asp-controller="Language" asp-action="SetLanguage" method="post">
                        <input type="hidden" name="culture" value="ms" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                            <img src="https://flagcdn.com/w20/my.png" class="me-3 shadow-sm" style="border-radius: 2px;"> 
                            <span>Bahasa Melayu (BM)</span>
                        </button>
                    </form>
                </li>
                <li>
                    <form asp-controller="Language" asp-action="SetLanguage" method="post">
                        <input type="hidden" name="culture" value="zh-CN" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                            <img src="https://flagcdn.com/w20/cn.png" class="me-3 shadow-sm" style="border-radius: 2px;"> 
                            <span>中文 (CN)</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="dropdown d-inline-block">
                <a class="text-white text-decoration-none dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 14px 16px; display: block;">
                    <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                </a>

                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                            <i class="fas fa-user me-2 text-muted"></i> @Localizer["MyBookings"]
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0 p-0">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login">@Localizer["Login"]</a>
            <a asp-controller="Auth" asp-action="Register">Register</a>
        }
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 FlyEase Travel. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>