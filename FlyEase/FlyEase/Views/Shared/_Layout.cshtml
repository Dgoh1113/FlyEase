@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<FlyEase.SharedResource> Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlyEase Travel</title>
    <link rel="stylesheet" href="~/css/_layout.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

            // If saved is 'dark', or no save exists but system is dark -> Apply Dark
            if (savedTheme === 'dark' || (!savedTheme && systemDark)) {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
            } else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
            }
        })();
    </script>

    @RenderSection("Head", required: false)
</head>
<body>
    <header>
        <h1 asp-controller="Home" asp-action="Index">FlyEase Travel</h1>
        <p>@Localizer["Welcome"]</p>
    </header>

    <nav class="d-flex align-items-center justify-content-center flex-wrap gap-3 p-3">
        <a asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
        <a asp-controller="Home" asp-action="Packages">@Localizer["Packages"]</a>

        @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
        {
            <a asp-controller="PackageManagement" asp-action="PackageManagement">@Localizer["ManagePackages"]</a>
        }

        <a asp-controller="Discount" asp-action="Discounts">@Localizer["Discounts"]</a>
        <a asp-controller="Home" asp-action="Contact">@Localizer["Contact"]</a>

        <div class="dropdown d-inline-block">
            <a class="text-white text-decoration-none dropdown-toggle" href="#" role="button" id="langDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 14px 16px; display: block;">
                <i class="fas fa-globe me-1"></i> Language
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0" style="min-width: 200px;">
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2"
                       asp-controller="Language"
                       asp-action="SetLanguage"
                       asp-route-culture="en"
                       asp-route-returnUrl="@Context.Request.Path">
                        <img src="https://flagcdn.com/w20/us.png" class="me-3 shadow-sm" style="border-radius: 2px;">
                        <span>English (EN)</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2"
                       asp-controller="Language"
                       asp-action="SetLanguage"
                       asp-route-culture="ms"
                       asp-route-returnUrl="@Context.Request.Path">
                        <img src="https://flagcdn.com/w20/my.png" class="me-3 shadow-sm" style="border-radius: 2px;">
                        <span>Bahasa Melayu (BM)</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2"
                       asp-controller="Language"
                       asp-action="SetLanguage"
                       asp-route-culture="zh-CN"
                       asp-route-returnUrl="@Context.Request.Path">
                        <img src="https://flagcdn.com/w20/cn.png" class="me-3 shadow-sm" style="border-radius: 2px;">
                        <span>中文 (CN)</span>
                    </a>
                </li>
            </ul>
        </div>

        <button class="btn btn-link text-white text-decoration-none" id="themeToggle" onclick="toggleTheme()" title="Toggle Dark Mode" style="padding: 14px 16px;">
            <i class="fas fa-moon" id="themeIcon"></i>
        </button>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="dropdown d-inline-block">
                <a class="text-white text-decoration-none dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 14px 16px; display: block;">
                    <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                </a>

                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                            <i class="fas fa-user me-2 text-muted"></i> @Localizer["MyBookings"]
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0 p-0">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login">@Localizer["Login"]</a>
            <a asp-controller="Auth" asp-action="Register">Register</a>
        }
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 FlyEase Travel. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <partial name="_Chatbot" />

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // 2. Update the ICON only after page loads (Theme is already set by head script)
        document.addEventListener("DOMContentLoaded", function() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-bs-theme');
            updateIcon(currentTheme);
        });

        // 3. The Toggle Function
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

            // Apply immediately
            html.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcon(newTheme);
        }

        // 4. Helper to Update Icon
        function updateIcon(theme) {
            const icon = document.getElementById('themeIcon');
            if (!icon) return;

            if (theme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        }
    </script>

</body>
</html>