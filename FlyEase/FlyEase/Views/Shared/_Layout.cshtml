@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlyEase Travel</title>
    <link rel="stylesheet" href="~/css/_layout.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    @RenderSection("Head", required: false)
</head>
<body>
    <!-- HEADER WITH TITLE - SKY BLUE -->
    <header>
        <h1 asp-controller="Home" asp-action="Index">FlyEase Travel</h1>
        <p>Your Gateway to Amazing Adventures</p>
    </header>

    <!-- NAVIGATION BAR - DARK BLUE -->
    <nav>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Packages">Packages</a>
        <a asp-controller="PackageManagement" asp-action="PackageManagement">Manage Packages</a>
        <a asp-controller="Discount" asp-action="Discounts">Discounts</a>
        <a asp-controller="Home" asp-action="Contact">Contact</a>

        <!-- AUTH NAVIGATION (DROPDOWN) -->
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="dropdown">
                <a class="text-white text-decoration-none dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 14px 16px; display: block;">
                    <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                </a>

                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <!-- Profile Link -->
                    <li>
                        <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                            <i class="fas fa-user me-2 text-muted"></i> My Profile
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <!-- Logout Button -->
                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0 p-0">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login">Login</a>
            <a asp-controller="Auth" asp-action="Register">Register</a>
        }
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 FlyEase Travel. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>