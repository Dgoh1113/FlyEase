@using System.Text.Json
@model FlyEase.Data.Package

@{
    var firstImg = Model.ImageURL?.Split(';').FirstOrDefault() ?? "/img/default-package.jpg";
    // Serialize itinerary for the popup
    var itineraryJson = JsonSerializer.Serialize(Model.Itinerary.OrderBy(i => i.DayNumber).Select(i => new { i.DayNumber, i.Title, i.ActivityDescription }));
}

<div class="card h-100 shadow-sm package-card">
    <div class="position-relative">
        <img src="@firstImg" class="card-img-top package-img-top" alt="@Model.PackageName">
        <div class="position-absolute top-0 end-0 m-2">
            <span class="badge bg-warning text-dark"><i class="fas fa-star me-1"></i>@(Model.AverageRating > 0 ? Model.AverageRating.ToString("0.0") : "New")</span>
        </div>
    </div>

    <div class="card-body p-3">
        <h5 class="card-title text-truncate" title="@Model.PackageName">@Model.PackageName</h5>
        <p class="card-text small text-muted mb-2"><i class="fas fa-map-marker-alt me-1 text-danger"></i>@Model.Destination</p>

        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="price-tag">RM @Model.Price.ToString("N0")</span>
                <small class="text-muted">@Model.AvailableSlots slots</small>
            </div>

            <a asp-controller="Payment" asp-action="CustomerInfo" asp-route-packageId="@Model.PackageID" class="btn btn-primary btn-sm w-100 mb-2">Book Now</a>
            <a asp-controller="Home" asp-action="PackageDetails" asp-route-id="@Model.PackageID" class="btn btn-outline-secondary btn-sm w-100">Details</a>
        </div>
    </div>
</div>